@model VenueSearchPagedResult
@{
    ViewData["Title"] = "Find Escape Rooms Near You";
    ViewData["Description"] = "Search and discover the best escape rooms in your area. Compare difficulty, read reviews, and book your adventure.";
}

<div class="bg-dark text-light py-5 mb-4">
    <div class="container">
        <h1 class="display-4 text-center mb-4">
            <i class="bi bi-door-open"></i> Find Your Next Escape
        </h1>
        <p class="lead text-center text-muted mb-4">
            Discover @ViewBag.TotalVenues venues with @ViewBag.TotalRooms escape rooms worldwide
        </p>

        <form method="get" class="row g-3 justify-content-center">
            <div class="col-md-4">
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-search"></i></span>
                    <input type="text" class="form-control" name="query" placeholder="Search escape rooms..." value="@ViewBag.Query" />
                </div>
            </div>
            <div class="col-md-3">
                <select class="form-select" name="city">
                    <option value="">All Cities</option>
                    @foreach (var city in ViewBag.Cities as List<string> ?? new List<string>())
                    {
                        <option value="@city" selected="@(ViewBag.City == city)">@city</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <select class="form-select" name="theme">
                    <option value="">All Themes</option>
                    @foreach (var theme in ViewBag.Themes as List<string> ?? new List<string>())
                    {
                        <option value="@theme" selected="@(ViewBag.Theme == theme)">@theme</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-search"></i> Search
                </button>
            </div>
        </form>

        <div class="row g-2 justify-content-center mt-3">
            <div class="col-auto">
                <button type="button" class="btn btn-outline-light btn-sm" data-bs-toggle="collapse" data-bs-target="#advancedFilters">
                    <i class="bi bi-sliders"></i> Advanced Filters
                </button>
            </div>
            <div class="col-auto">
                <a href="/map" class="btn btn-outline-light btn-sm">
                    <i class="bi bi-map"></i> View Map
                </a>
            </div>
        </div>

        <div class="collapse mt-3" id="advancedFilters">
            <form method="get" class="row g-2 justify-content-center bg-secondary bg-opacity-25 p-3 rounded">
                <input type="hidden" name="query" value="@ViewBag.Query" />
                <input type="hidden" name="city" value="@ViewBag.City" />
                <input type="hidden" name="theme" value="@ViewBag.Theme" />
                <div class="col-md-2">
                    <label class="form-label small">Difficulty</label>
                    <select class="form-select form-select-sm" name="minDifficulty">
                        <option value="">Any</option>
                        <option value="1">1 - Very Easy</option>
                        <option value="2">2 - Easy</option>
                        <option value="3">3 - Medium</option>
                        <option value="4">4 - Hard</option>
                        <option value="5">5 - Expert</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label small">Players</label>
                    <select class="form-select form-select-sm" name="players">
                        <option value="">Any</option>
                        @for (int i = 2; i <= 8; i++)
                        {
                            <option value="@i">@i players</option>
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label small">Sort By</label>
                    <select class="form-select form-select-sm" name="sort">
                        <option value="">Recommended</option>
                        <option value="rating">Rating</option>
                        <option value="reviews">Reviews</option>
                        <option value="rooms_count">Rooms</option>
                        <option value="name">Name</option>
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary btn-sm w-100">Apply</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="container">
    @if (Model.TotalCount == 0)
    {
        <div class="text-center py-5">
            <i class="bi bi-search display-1 text-muted"></i>
            <h3 class="mt-3">No escape rooms found</h3>
            <p class="text-muted">Try adjusting your search filters or explore a different city.</p>
            <a href="/" class="btn btn-primary">Clear Filters</a>
        </div>
    }
    else
    {
        <div class="d-flex justify-content-between align-items-center mb-3">
            <p class="text-muted mb-0">
                Showing @((Model.Page - 1) * Model.PageSize + 1)-@Math.Min(Model.Page * Model.PageSize, Model.TotalCount) of @Model.TotalCount venues
            </p>
        </div>

        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var venue in Model.Venues)
            {
                <div class="col">
                    <div class="card h-100 venue-card @(venue.IsPremium ? "border-warning" : "")">
                        @if (venue.IsPremium)
                        {
                            <span class="badge bg-warning text-dark position-absolute top-0 end-0 m-2">Featured</span>
                        }
                        <img src="@(venue.LocalImagePath ?? "/images/placeholder-venue.jpg")" class="card-img-top" alt="@venue.Name" style="height: 180px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title">
                                <a href="/venue/@venue.Slug" class="text-decoration-none text-dark">@venue.Name</a>
                                @if (venue.IsVerified)
                                {
                                    <i class="bi bi-patch-check-fill text-primary" title="Verified"></i>
                                }
                            </h5>
                            <p class="card-text text-muted small">
                                <i class="bi bi-geo-alt"></i> @venue.City, @venue.Country
                            </p>
                            <div class="d-flex align-items-center mb-2">
                                @if (venue.AverageRating.HasValue)
                                {
                                    <span class="badge bg-success me-2">
                                        <i class="bi bi-star-fill"></i> @venue.AverageRating.Value.ToString("F1")
                                    </span>
                                }
                                <small class="text-muted">@venue.TotalReviews reviews</small>
                            </div>
                            <p class="card-text">
                                <span class="badge bg-secondary">@venue.TotalRooms rooms</span>
                                @if (venue.MostPopularTheme != null)
                                {
                                    <span class="badge bg-info">@venue.MostPopularTheme</span>
                                }
                                @if (venue.LowestDifficulty.HasValue && venue.HighestDifficulty.HasValue)
                                {
                                    <span class="badge bg-light text-dark">
                                        Difficulty: @venue.LowestDifficulty-@venue.HighestDifficulty
                                    </span>
                                }
                            </p>
                        </div>
                        <div class="card-footer bg-transparent">
                            <a href="/venue/@venue.Slug" class="btn btn-outline-primary btn-sm w-100">
                                View Details <i class="bi bi-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>

        @if (Model.TotalPages > 1)
        {
            <nav class="mt-4">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                        <a class="page-link" href="?page=@(Model.Page - 1)&query=@ViewBag.Query&city=@ViewBag.City&theme=@ViewBag.Theme">Previous</a>
                    </li>
                    @for (int i = Math.Max(1, Model.Page - 2); i <= Math.Min(Model.TotalPages, Model.Page + 2); i++)
                    {
                        <li class="page-item @(i == Model.Page ? "active" : "")">
                            <a class="page-link" href="?page=@i&query=@ViewBag.Query&city=@ViewBag.City&theme=@ViewBag.Theme">@i</a>
                        </li>
                    }
                    <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                        <a class="page-link" href="?page=@(Model.Page + 1)&query=@ViewBag.Query&city=@ViewBag.City&theme=@ViewBag.Theme">Next</a>
                    </li>
                </ul>
            </nav>
        }
    }
</div>

@section Styles {
    <style>
        .venue-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
            transition: all 0.3s ease;
        }
    </style>
}
