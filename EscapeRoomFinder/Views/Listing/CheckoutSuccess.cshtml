@{
    ViewData["Title"] = "Payment Successful";
    var claimRequest = ViewBag.ClaimRequest as EscapeRoomFinder.Models.Domain.ClaimRequest;
    var invoice = ViewBag.Invoice as EscapeRoomFinder.Models.Domain.Invoice;
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-body text-center py-5">
                    <div class="mb-4">
                        <i class="bi bi-check-circle-fill text-success" style="font-size: 5rem;"></i>
                    </div>
                    <h1 class="display-6 mb-3">Payment Successful!</h1>
                    <p class="lead text-muted mb-4">
                        Thank you for your payment. Your premium listing is now active.
                    </p>

                    @if (claimRequest?.Venue != null)
                    {
                        <div class="card bg-light mb-4">
                            <div class="card-body">
                                <h5>@claimRequest.Venue.Name</h5>
                                <p class="mb-2">
                                    <span class="badge bg-primary">@claimRequest.PlanType Plan</span>
                                    <span class="badge bg-success">@claimRequest.DurationMonths Month(s)</span>
                                </p>
                                <p class="mb-0 text-muted">
                                    Total: <strong>$@claimRequest.TotalAmount.ToString("F2")</strong>
                                </p>
                            </div>
                        </div>
                    }

                    @if (invoice != null)
                    {
                        <p class="mb-4">
                            Invoice Number: <strong>@invoice.InvoiceNumber</strong>
                            <br>
                            <a href="/Listing/Invoice/@invoice.InvoiceId" class="btn btn-outline-primary btn-sm mt-2">
                                <i class="bi bi-receipt me-1"></i>View Invoice
                            </a>
                        </p>
                    }

                    <div class="d-flex justify-content-center gap-3">
                        <a href="/" class="btn btn-primary">
                            <i class="bi bi-house me-1"></i>Go Home
                        </a>
                        @if (claimRequest?.Venue != null)
                        {
                            <a href="/@claimRequest.Venue.Slug" class="btn btn-outline-primary">
                                <i class="bi bi-door-open me-1"></i>View Your Venue
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
