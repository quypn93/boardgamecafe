@model List<EscapeRoomFinder.Models.Domain.Invoice>
@{
    ViewData["Title"] = "Invoices";
    Layout = "_AdminLayout";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-receipt me-2"></i>Invoices</h1>
        <div class="badge bg-info fs-6">Total Revenue: $@ViewBag.TotalRevenue?.ToString("N2")</div>
    </div>

    <div class="card">
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Invoice #</th>
                        <th>Venue</th>
                        <th>Description</th>
                        <th>Amount</th>
                        <th>Status</th>
                        <th>Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var invoice in Model)
                    {
                        <tr>
                            <td>@invoice.InvoiceNumber</td>
                            <td>@invoice.Venue?.Name</td>
                            <td>@invoice.Description</td>
                            <td>$@invoice.Amount.ToString("F2")</td>
                            <td>
                                <span class="badge bg-@(invoice.Status == "paid" ? "success" : "warning")">@invoice.Status</span>
                            </td>
                            <td>@invoice.CreatedAt.ToString("MM/dd/yyyy")</td>
                            <td>
                                <a href="/Listing/Invoice/@invoice.InvoiceId" class="btn btn-sm btn-outline-primary">View</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
