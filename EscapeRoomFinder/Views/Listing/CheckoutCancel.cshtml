@{
    ViewData["Title"] = "Payment Cancelled";
    var claimRequest = ViewBag.ClaimRequest as EscapeRoomFinder.Models.Domain.ClaimRequest;
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-body text-center py-5">
                    <div class="mb-4">
                        <i class="bi bi-x-circle text-warning" style="font-size: 5rem;"></i>
                    </div>
                    <h1 class="display-6 mb-3">Payment Cancelled</h1>
                    <p class="lead text-muted mb-4">
                        Your payment was cancelled. No charges have been made.
                    </p>

                    @if (claimRequest?.Venue != null)
                    {
                        <p class="mb-4">
                            You were claiming: <strong>@claimRequest.Venue.Name</strong>
                        </p>
                    }

                    <div class="d-flex justify-content-center gap-3">
                        <a href="/Listing/Pricing" class="btn btn-primary">
                            <i class="bi bi-arrow-left me-1"></i>Back to Pricing
                        </a>
                        @if (claimRequest != null)
                        {
                            <a href="/Listing/Claim/@claimRequest.VenueId" class="btn btn-outline-primary">
                                <i class="bi bi-arrow-repeat me-1"></i>Try Again
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
