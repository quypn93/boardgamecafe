@{
    ViewData["Title"] = "Premium Listing Plans";
    var plans = ViewBag.Plans as Dictionary<string, EscapeRoomFinder.Controllers.ListingPlan>;
}

<div class="bg-dark text-white py-5">
    <div class="container text-center">
        <h1 class="display-5 fw-bold mb-3">
            <i class="bi bi-star-fill me-2"></i>Premium Listing Plans
        </h1>
        <p class="lead opacity-90 mb-0">
            Boost your escape room venue's visibility and attract more players
        </p>
    </div>
</div>

<div class="container py-5">
    <div class="row justify-content-center mb-5">
        @if (plans != null)
        {
            @foreach (var plan in plans)
            {
                var isPremium = plan.Key == "Premium";
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100 shadow @(isPremium ? "border-primary border-2" : "")">
                        @if (isPremium)
                        {
                            <div class="card-header bg-primary text-white text-center py-2">
                                <i class="bi bi-star-fill me-1"></i> Most Popular
                            </div>
                        }
                        <div class="card-body text-center p-4">
                            <h3 class="card-title mb-3">@plan.Key</h3>
                            <div class="mb-4">
                                <span class="display-4 fw-bold text-primary">$@plan.Value.MonthlyPrice</span>
                                <span class="text-muted">/month</span>
                            </div>

                            <ul class="list-unstyled text-start mb-4">
                                @foreach (var feature in plan.Value.Features)
                                {
                                    <li class="mb-2">
                                        <i class="bi bi-check-circle-fill text-success me-2"></i>
                                        @feature
                                    </li>
                                }
                            </ul>
                        </div>
                        <div class="card-footer bg-white border-0 pb-4 text-center">
                            <button type="button" class="btn @(isPremium ? "btn-primary" : "btn-outline-primary") btn-lg w-100 select-plan-btn"
                                    data-plan="@plan.Key" data-bs-toggle="modal" data-bs-target="#selectVenueModal">
                                Get Started
                            </button>
                        </div>
                    </div>
                </div>
            }
        }
    </div>

    <div class="card shadow-sm mb-5">
        <div class="card-header bg-white">
            <h4 class="mb-0"><i class="bi bi-table me-2"></i>Feature Comparison</h4>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Feature</th>
                            <th class="text-center">Basic</th>
                            <th class="text-center bg-primary bg-opacity-10">Premium</th>
                            <th class="text-center">Featured</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Basic Listing</td>
                            <td class="text-center"><i class="bi bi-check-lg text-success fs-5"></i></td>
                            <td class="text-center bg-primary bg-opacity-10"><i class="bi bi-check-lg text-success fs-5"></i></td>
                            <td class="text-center"><i class="bi bi-check-lg text-success fs-5"></i></td>
                        </tr>
                        <tr>
                            <td>Contact Information</td>
                            <td class="text-center"><i class="bi bi-check-lg text-success fs-5"></i></td>
                            <td class="text-center bg-primary bg-opacity-10"><i class="bi bi-check-lg text-success fs-5"></i></td>
                            <td class="text-center"><i class="bi bi-check-lg text-success fs-5"></i></td>
                        </tr>
                        <tr>
                            <td>Photo Gallery</td>
                            <td class="text-center"><i class="bi bi-x-lg text-muted fs-5"></i></td>
                            <td class="text-center bg-primary bg-opacity-10"><i class="bi bi-check-lg text-success fs-5"></i> Up to 20</td>
                            <td class="text-center"><i class="bi bi-check-lg text-success fs-5"></i> Unlimited</td>
                        </tr>
                        <tr>
                            <td>Room Showcase</td>
                            <td class="text-center"><i class="bi bi-x-lg text-muted fs-5"></i></td>
                            <td class="text-center bg-primary bg-opacity-10"><i class="bi bi-check-lg text-success fs-5"></i></td>
                            <td class="text-center"><i class="bi bi-check-lg text-success fs-5"></i></td>
                        </tr>
                        <tr>
                            <td>Priority in Search</td>
                            <td class="text-center"><i class="bi bi-x-lg text-muted fs-5"></i></td>
                            <td class="text-center bg-primary bg-opacity-10"><i class="bi bi-check-lg text-success fs-5"></i></td>
                            <td class="text-center"><i class="bi bi-check-lg text-success fs-5"></i></td>
                        </tr>
                        <tr>
                            <td>Featured on Homepage</td>
                            <td class="text-center"><i class="bi bi-x-lg text-muted fs-5"></i></td>
                            <td class="text-center bg-primary bg-opacity-10"><i class="bi bi-x-lg text-muted fs-5"></i></td>
                            <td class="text-center"><i class="bi bi-check-lg text-success fs-5"></i></td>
                        </tr>
                        <tr>
                            <td>Booking Integration</td>
                            <td class="text-center"><i class="bi bi-x-lg text-muted fs-5"></i></td>
                            <td class="text-center bg-primary bg-opacity-10"><i class="bi bi-x-lg text-muted fs-5"></i></td>
                            <td class="text-center"><i class="bi bi-check-lg text-success fs-5"></i></td>
                        </tr>
                        <tr>
                            <td>Analytics Dashboard</td>
                            <td class="text-center"><i class="bi bi-x-lg text-muted fs-5"></i></td>
                            <td class="text-center bg-primary bg-opacity-10"><i class="bi bi-x-lg text-muted fs-5"></i></td>
                            <td class="text-center"><i class="bi bi-check-lg text-success fs-5"></i></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="text-center py-4 bg-light rounded">
        <h4>Ready to grow your business?</h4>
        <p class="text-muted mb-3">Join escape room venues already using our platform</p>
        <div class="d-flex justify-content-center gap-3 flex-wrap">
            <a href="/" class="btn btn-primary btn-lg">
                <i class="bi bi-search me-2"></i>Find Your Venue
            </a>
            <a href="/Listing/SubmitVenue" class="btn btn-outline-primary btn-lg">
                <i class="bi bi-plus-circle me-2"></i>Add Your Venue
            </a>
        </div>
    </div>
</div>

<div class="modal fade" id="selectVenueModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title"><i class="bi bi-search me-2"></i>Find Your Venue</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p class="text-muted mb-3">Search for your escape room venue to get started with the <strong id="selectedPlanName">Premium</strong> plan.</p>
                <div class="mb-3">
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-search"></i></span>
                        <input type="text" class="form-control" id="venueSearchInput" placeholder="Enter venue name or city...">
                    </div>
                </div>
                <div id="searchResults" class="mt-3" style="max-height: 400px; overflow-y: auto;">
                    <div class="text-center text-muted py-4" id="searchPlaceholder">
                        <i class="bi bi-door-open display-4"></i>
                        <p class="mt-2">Start typing to search for your venue</p>
                    </div>
                    <div id="searchResultsList" class="list-group" style="display: none;"></div>
                    <div id="noResults" class="text-center text-muted py-4" style="display: none;">
                        <i class="bi bi-emoji-frown display-4"></i>
                        <p class="mt-2">No venues found. <a href="/Listing/SubmitVenue" class="fw-bold">Add it now</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<input type="hidden" id="selectedPlan" value="Premium">

@section Scripts {
<script>
    let searchTimeout;
    const selectedPlanInput = document.getElementById('selectedPlan');
    const selectedPlanName = document.getElementById('selectedPlanName');
    const venueSearchInput = document.getElementById('venueSearchInput');
    const searchPlaceholder = document.getElementById('searchPlaceholder');
    const searchResultsList = document.getElementById('searchResultsList');
    const noResults = document.getElementById('noResults');

    document.querySelectorAll('.select-plan-btn').forEach(btn => {
        btn.addEventListener('click', function() {
            selectedPlanInput.value = this.dataset.plan;
            selectedPlanName.textContent = this.dataset.plan;
        });
    });

    venueSearchInput.addEventListener('input', function() {
        clearTimeout(searchTimeout);
        const query = this.value.trim();
        if (query.length < 2) {
            searchPlaceholder.style.display = 'block';
            searchResultsList.style.display = 'none';
            noResults.style.display = 'none';
            return;
        }
        searchTimeout = setTimeout(() => searchVenues(query), 300);
    });

    async function searchVenues(query) {
        try {
            const response = await fetch(`/api/venues/search?q=${encodeURIComponent(query)}&limit=10`);
            const venues = await response.json();

            searchPlaceholder.style.display = 'none';

            if (venues.length === 0) {
                searchResultsList.style.display = 'none';
                noResults.style.display = 'block';
                return;
            }

            noResults.style.display = 'none';
            searchResultsList.innerHTML = venues.map(v => `
                <a href="/Listing/Claim/${v.venueId}?plan=${selectedPlanInput.value}" class="list-group-item list-group-item-action">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <h6 class="mb-1">${v.name}</h6>
                            <small class="text-muted"><i class="bi bi-geo-alt me-1"></i>${v.city}${v.country ? ', ' + v.country : ''}</small>
                        </div>
                        <i class="bi bi-chevron-right"></i>
                    </div>
                </a>
            `).join('');
            searchResultsList.style.display = 'block';
        } catch (error) {
            console.error('Search error:', error);
        }
    }
</script>
}
