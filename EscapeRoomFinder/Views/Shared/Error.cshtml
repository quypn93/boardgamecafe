@model ErrorViewModel
@{
    ViewData["Title"] = Model?.StatusCode?.ToString() ?? "Error";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <h1 class="display-1 text-muted">@(Model?.StatusCode ?? 500)</h1>
            <h2>@(Model?.Message ?? "Oops! Something went wrong.")</h2>
            <p class="text-muted">
                @if (Model?.StatusCode == 404)
                {
                    <span>The escape room you're looking for has vanished without a trace.</span>
                }
                else
                {
                    <span>Don't worry, even the best puzzle solvers get stuck sometimes.</span>
                }
            </p>
            <a href="/" class="btn btn-primary">
                <i class="bi bi-house"></i> Back to Home
            </a>
        </div>
    </div>
</div>
