@model List<EscapeRoomFinder.Models.Domain.User>
@{
    ViewData["Title"] = "User Management";
    Layout = "_AdminLayout";
    var filter = ViewBag.Filter as string ?? "all";
    var userRoles = ViewBag.UserRoles as Dictionary<int, List<string>> ?? new Dictionary<int, List<string>>();
}

<h1 class="mb-4"><i class="bi bi-people me-2"></i>User Management</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    <div class="row mb-4">
        <div class="col-md-3">
            <a href="/Admin/Users?filter=all" class="card text-decoration-none @(filter == "all" ? "border-primary border-2" : "")">
                <div class="card-body text-center">
                    <h6 class="text-primary">All Users</h6>
                    <h4>@ViewBag.TotalCount</h4>
                </div>
            </a>
        </div>
        <div class="col-md-3">
            <a href="/Admin/Users?filter=admin" class="card text-decoration-none @(filter == "admin" ? "border-danger border-2" : "")">
                <div class="card-body text-center">
                    <h6 class="text-danger">Admins</h6>
                    <h4>@ViewBag.AdminCount</h4>
                </div>
            </a>
        </div>
        <div class="col-md-3">
            <a href="/Admin/Users?filter=venueowner" class="card text-decoration-none @(filter == "venueowner" ? "border-success border-2" : "")">
                <div class="card-body text-center">
                    <h6 class="text-success">Venue Owners</h6>
                    <h4>@ViewBag.VenueOwnerCount</h4>
                </div>
            </a>
        </div>
        <div class="col-md-3">
            <a href="/Admin/Users?filter=locked" class="card text-decoration-none @(filter == "locked" ? "border-warning border-2" : "")">
                <div class="card-body text-center">
                    <h6 class="text-warning">Locked</h6>
                    <h4>@ViewBag.LockedCount</h4>
                </div>
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            @if (Model.Any())
            {
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>User</th>
                            <th>Email</th>
                            <th>Roles</th>
                            <th>Reviews</th>
                            <th>Created</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            var roles = userRoles.GetValueOrDefault(user.Id, new List<string>());
                            var isLocked = user.LockoutEnd != null && user.LockoutEnd > DateTimeOffset.UtcNow;
                            <tr class="@(isLocked ? "table-warning" : "")">
                                <td>
                                    <strong>@user.DisplayName</strong>
                                    @if (user.IsVenueOwner)
                                    {
                                        <br><small class="badge bg-success">Venue Owner</small>
                                    }
                                </td>
                                <td>
                                    @user.Email
                                    @if (user.EmailConfirmed)
                                    {
                                        <i class="bi bi-check-circle-fill text-success"></i>
                                    }
                                </td>
                                <td>
                                    @foreach (var role in roles)
                                    {
                                        <span class="badge @(role == "Admin" ? "bg-danger" : "bg-secondary")">@role</span>
                                    }
                                </td>
                                <td>@user.TotalReviews</td>
                                <td>@user.CreatedAt.ToString("MMM dd, yyyy")</td>
                                <td>
                                    @if (isLocked)
                                    {
                                        <span class="badge bg-warning">Locked</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                </td>
                                <td>
                                    <a href="/Admin/EditUser/@user.Id" class="btn btn-sm btn-outline-primary"><i class="bi bi-pencil"></i></a>
                                    <form method="post" action="/Admin/ToggleUserLockout/@user.Id" class="d-inline">
                                        @if (isLocked)
                                        {
                                            <button class="btn btn-sm btn-outline-success" title="Unlock"><i class="bi bi-unlock"></i></button>
                                        }
                                        else
                                        {
                                            <button class="btn btn-sm btn-outline-warning" title="Lock"><i class="bi bi-lock"></i></button>
                                        }
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="text-center py-5 text-muted">
                    <i class="bi bi-people display-4"></i>
                    <p class="mt-2">No users found.</p>
                </div>
            }
        </div>
    </div>
