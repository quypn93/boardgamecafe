@model List<EscapeRoomFinder.Models.Domain.Review>
@{
    ViewData["Title"] = "Review Management";
    Layout = "_AdminLayout";
    var pending = ViewBag.Pending as bool?;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-chat-square-text me-2"></i>Review Management</h1>
</div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Filter Tabs -->
    <ul class="nav nav-tabs mb-4">
        <li class="nav-item">
            <a class="nav-link @(pending == true ? "active" : "")" href="/admin/reviews?pending=true">
                <i class="bi bi-hourglass-split"></i> Pending
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(pending == null ? "active" : "")" href="/admin/reviews">
                <i class="bi bi-list-ul"></i> All Reviews
            </a>
        </li>
    </ul>

    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <span>Reviews (@Model.Count)</span>
            @if (Model.Any(r => !r.IsApproved))
            {
                <form method="post" action="/admin/reviews/bulk-approve" id="bulkApproveForm">
                    <button type="submit" class="btn btn-success btn-sm" id="bulkApproveBtn" disabled>
                        <i class="bi bi-check-all"></i> Approve Selected (<span id="selectedCount">0</span>)
                    </button>
                </form>
            }
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th width="40">
                                <input type="checkbox" id="selectAll" class="form-check-input">
                            </th>
                            <th>Reviewer</th>
                            <th>Venue</th>
                            <th>Rating</th>
                            <th>Content</th>
                            <th>Date</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var review in Model)
                        {
                            <tr>
                                <td>
                                    @if (!review.IsApproved)
                                    {
                                        <input type="checkbox" name="reviewIds" value="@review.ReviewId"
                                               class="form-check-input review-checkbox" form="bulkApproveForm">
                                    }
                                </td>
                                <td>
                                    <strong>@(review.User?.DisplayName ?? review.User?.Email ?? "Anonymous")</strong>
                                    @if (review.User != null)
                                    {
                                        <br><small class="text-muted">@review.User.Email</small>
                                    }
                                </td>
                                <td>
                                    <a href="/@(review.Venue?.Slug)" target="_blank">@review.Venue?.Name</a>
                                </td>
                                <td>
                                    <span class="text-warning">
                                        @for (int i = 0; i < review.Rating; i++)
                                        {
                                            <i class="bi bi-star-fill"></i>
                                        }
                                    </span>
                                </td>
                                <td style="max-width: 300px;">
                                    <div class="text-truncate" title="@review.Content">@review.Content</div>
                                </td>
                                <td>
                                    <small>@review.CreatedAt.ToString("MMM dd, yyyy")</small>
                                    @if (review.ApprovedAt.HasValue)
                                    {
                                        <br><small class="text-success">Approved: @review.ApprovedAt.Value.ToString("MMM dd")</small>
                                    }
                                </td>
                                <td>
                                    @if (review.IsApproved)
                                    {
                                        <span class="badge bg-success">Approved</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark">Pending</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        @if (!review.IsApproved)
                                        {
                                            <form method="post" action="/admin/reviews/approve/@review.ReviewId" class="d-inline">
                                                <button type="submit" class="btn btn-outline-success" title="Approve">
                                                    <i class="bi bi-check-lg"></i>
                                                </button>
                                            </form>
                                        }
                                        <form method="post" action="/admin/reviews/reject/@review.ReviewId" class="d-inline"
                                              onsubmit="return confirm('Are you sure you want to delete this review?');">
                                            <button type="submit" class="btn btn-outline-danger" title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <!-- Pagination -->
                @if (ViewBag.TotalPages > 1)
                {
                    <nav>
                        <ul class="pagination justify-content-center">
                            @for (int i = 1; i <= ViewBag.TotalPages; i++)
                            {
                                <li class="page-item @(i == ViewBag.Page ? "active" : "")">
                                    <a class="page-link" href="/admin/reviews?pending=@pending&page=@i">@i</a>
                                </li>
                            }
                        </ul>
                    </nav>
                }
            }
            else
            {
                <div class="text-center py-5 text-muted">
                    <i class="bi bi-inbox display-4"></i>
                    <p class="mt-2">No reviews found.</p>
                </div>
            }
        </div>
    </div>

@section Scripts {
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const selectAll = document.getElementById('selectAll');
        const checkboxes = document.querySelectorAll('.review-checkbox');
        const bulkApproveBtn = document.getElementById('bulkApproveBtn');
        const selectedCount = document.getElementById('selectedCount');

        function updateButtonState() {
            const checked = document.querySelectorAll('.review-checkbox:checked').length;
            if (selectedCount) selectedCount.textContent = checked;
            if (bulkApproveBtn) bulkApproveBtn.disabled = checked === 0;
        }

        if (selectAll) {
            selectAll.addEventListener('change', function() {
                checkboxes.forEach(cb => cb.checked = this.checked);
                updateButtonState();
            });
        }

        checkboxes.forEach(cb => {
            cb.addEventListener('change', updateButtonState);
        });
    });
</script>
}
