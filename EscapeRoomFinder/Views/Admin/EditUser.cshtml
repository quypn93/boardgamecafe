@model EscapeRoomFinder.Models.Domain.User
@{
    ViewData["Title"] = "Edit User";
    Layout = "_AdminLayout";
    var userRoles = ViewBag.UserRoles as List<string> ?? new List<string>();
}

<h1 class="mb-4"><i class="bi bi-pencil me-2"></i>Edit User</h1>

    <form method="post" action="/Admin/EditUser/@Model.Id">
        <div class="card mb-4">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Display Name</label>
                        <input type="text" name="DisplayName" class="form-control" value="@Model.DisplayName">
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Email</label>
                        <input type="email" name="Email" class="form-control" value="@Model.Email" readonly>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">First Name</label>
                        <input type="text" name="FirstName" class="form-control" value="@Model.FirstName">
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Last Name</label>
                        <input type="text" name="LastName" class="form-control" value="@Model.LastName">
                    </div>
                </div>

                <hr>

                <h5>Roles</h5>
                <div class="mb-3">
                    <div class="form-check">
                        <input type="checkbox" name="Roles" value="Admin" class="form-check-input" @(userRoles.Contains("Admin") ? "checked" : "")>
                        <label class="form-check-label">Admin</label>
                    </div>
                    <div class="form-check">
                        <input type="checkbox" name="Roles" value="VenueOwner" class="form-check-input" @(userRoles.Contains("VenueOwner") ? "checked" : "")>
                        <label class="form-check-label">Venue Owner</label>
                    </div>
                    <div class="form-check">
                        <input type="checkbox" name="Roles" value="User" class="form-check-input" @(userRoles.Contains("User") ? "checked" : "")>
                        <label class="form-check-label">User</label>
                    </div>
                </div>

                <div class="form-check mb-3">
                    <input type="checkbox" name="IsVenueOwner" value="true" class="form-check-input" @(Model.IsVenueOwner ? "checked" : "")>
                    <label class="form-check-label">Is Venue Owner</label>
                </div>
            </div>
        </div>

        <div class="d-flex gap-2">
            <a href="/Admin/Users" class="btn btn-secondary">Cancel</a>
            <button type="submit" class="btn btn-primary">Save Changes</button>
        </div>
    </form>
