{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=YOUR_SERVER; Initial Catalog=YOUR_DATABASE; User ID=YOUR_USER; Password=YOUR_PASSWORD; App=boardgameapp; Timeout=180; Encrypt=false;"
  },
  "ReviewSettings": {
    "RequireApproval": true
  },
  "Email": {
    "RequireConfirmation": true,
    "SmtpHost": "smtp.example.com",
    "SmtpPort": 587,
    "SmtpUser": "your-email@example.com",
    "SmtpPassword": "YOUR_SMTP_PASSWORD",
    "FromEmail": "your-email@example.com",
    "FromName": "BoardGame Cafe Finder"
  },
  "GooglePlaces": {
    "ApiKey": "YOUR_GOOGLE_PLACES_VALUE_HERE"
  },
  "Yelp": {
    "ApiKey": "YOUR_YELP_VALUE_HERE"
  },
  "BoardGameGeek": {
    "ApiAccessToken": "YOUR_BGG_ACCESS_TOKEN"
  },
  "Redis": {
    "ConnectionString": "localhost:6379"
  },
  "Payment": {
    "ActiveProvider": "PayPal"
  },
  "PayPal": {
    "ClientId": "YOUR_PAYPAL_CLIENT_ID",
    "ClientSecret": "YOUR_PAYPAL_CLIENT_SECRET",
    "Environment": "sandbox",
    "WebhookId": "YOUR_PAYPAL_WEBHOOK_ID"
  },
  "Stripe": {
    "PublishableKey": "YOUR_STRIPE_PUBLISHABLE_VALUE",
    "SecretKey": "YOUR_STRIPE_SECRET_VALUE",
    "WebhookSecret": "YOUR_STRIPE_WEBHOOK_SECRET",
    "SuccessUrl": "https://localhost:5001/Listing/CheckoutSuccess?session_id={CHECKOUT_SESSION_ID}",
    "CancelUrl": "https://localhost:5001/Listing/CheckoutCancel"
  },
  "ImageStorage": {
    "CafeImagesPath": "wwwroot/images"
  },
  "CrawlSettings": {
    "EnableAutoCrawl": false,
    "CitiesPerBatch": 3,
    "RetryDelayHours": 2,
    "DelayBetweenCitiesSeconds": 300,
    "MaxResultsPerCity": 15,
    "CheckIntervalMinutes": 60
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
