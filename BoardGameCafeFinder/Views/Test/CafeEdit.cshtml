@model BoardGameCafeFinder.Models.Domain.Cafe
@{
    var isEdit = (bool)(ViewBag.IsEdit ?? false);
    ViewData["Title"] = isEdit ? $"Edit: {Model.Name}" : "Create New Cafe";
    Layout = "_AdminLayout";
}

<div class="container-fluid mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div>
                    <h2><i class="bi bi-@(isEdit ? "pencil" : "plus-circle")"></i> @(isEdit ? "Edit Cafe" : "Create New Cafe")</h2>
                    <p class="text-muted mb-0">@(isEdit ? $"Editing: {Model.Name}" : "Add a new board game cafe to the database")</p>
                </div>
                <a href="/Test/Cafes" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Back to Cafes
                </a>
            </div>

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show">
                    <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <form method="post" action="/Test/SaveCafe" id="cafeForm">
                <input type="hidden" name="CafeId" value="@Model.CafeId" />

                <!-- Basic Information -->
                <div class="card mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="bi bi-info-circle"></i> Basic Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Name <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" name="Name" value="@Model.Name" required maxlength="200" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Slug <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" name="Slug" id="slugInput" value="@Model.Slug" required maxlength="300" />
                                <small class="text-muted">URL-friendly name (auto-generated from name)</small>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Description</label>
                            <textarea class="form-control" name="Description" rows="3" maxlength="2000">@Model.Description</textarea>
                        </div>
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label class="form-label fw-bold">Price Range</label>
                                <select class="form-select" name="PriceRange">
                                    <option value="">Select...</option>
                                    <option value="$" selected="@(Model.PriceRange == "$")">$ - Budget</option>
                                    <option value="$$" selected="@(Model.PriceRange == "$$")">$$ - Moderate</option>
                                    <option value="$$$" selected="@(Model.PriceRange == "$$$")">$$$ - Expensive</option>
                                    <option value="$$$$" selected="@(Model.PriceRange == "$$$$")">$$$$ - Premium</option>
                                </select>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label class="form-label fw-bold">Average Rating</label>
                                <input type="number" class="form-control" name="AverageRating" value="@Model.AverageRating" step="0.01" min="0" max="5" />
                            </div>
                            <div class="col-md-4 mb-3">
                                <label class="form-label fw-bold">Total Reviews</label>
                                <input type="number" class="form-control" name="TotalReviews" value="@Model.TotalReviews" min="0" />
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Location -->
                <div class="card mb-4">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0"><i class="bi bi-geo-alt"></i> Location</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Address <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" name="Address" value="@Model.Address" required maxlength="500" />
                        </div>
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label class="form-label fw-bold">City <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" name="City" value="@Model.City" required maxlength="100" />
                            </div>
                            <div class="col-md-4 mb-3">
                                <label class="form-label fw-bold">State/Province</label>
                                <input type="text" class="form-control" name="State" value="@Model.State" maxlength="100" />
                            </div>
                            <div class="col-md-4 mb-3">
                                <label class="form-label fw-bold">Country <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" name="Country" value="@(Model.Country ?? "United States")" required maxlength="100" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label class="form-label fw-bold">Postal Code</label>
                                <input type="text" class="form-control" name="PostalCode" value="@Model.PostalCode" maxlength="20" />
                            </div>
                            <div class="col-md-4 mb-3">
                                <label class="form-label fw-bold">Latitude <span class="text-danger">*</span></label>
                                <input type="number" class="form-control" name="Latitude" id="latInput" value="@Model.Latitude" required step="0.00000001" />
                            </div>
                            <div class="col-md-4 mb-3">
                                <label class="form-label fw-bold">Longitude <span class="text-danger">*</span></label>
                                <input type="number" class="form-control" name="Longitude" id="lngInput" value="@Model.Longitude" required step="0.00000001" />
                            </div>
                        </div>
                        <div class="mb-3">
                            <button type="button" class="btn btn-outline-info btn-sm" id="geocodeBtn">
                                <i class="bi bi-search"></i> Geocode from Address
                            </button>
                            <small class="text-muted ms-2">Automatically fill coordinates from address</small>
                        </div>
                    </div>
                </div>

                <!-- Contact Information -->
                <div class="card mb-4">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0"><i class="bi bi-telephone"></i> Contact Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Phone</label>
                                <input type="text" class="form-control" name="Phone" value="@Model.Phone" maxlength="20" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Email</label>
                                <input type="email" class="form-control" name="Email" value="@Model.Email" maxlength="100" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Website</label>
                                <input type="url" class="form-control" name="Website" value="@Model.Website" maxlength="500" placeholder="https://" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Google Maps URL</label>
                                <input type="url" class="form-control" name="GoogleMapsUrl" value="@Model.GoogleMapsUrl" maxlength="1000" />
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Board Game Geek -->
                <div class="card mb-4">
                    <div class="card-header bg-warning text-dark">
                        <h5 class="mb-0"><i class="bi bi-controller"></i> BoardGameGeek Integration</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">BGG Username</label>
                                <input type="text" class="form-control" name="BggUsername" value="@Model.BggUsername" maxlength="100" />
                                <small class="text-muted">BoardGameGeek username for game collection sync</small>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Library URL</label>
                                <input type="url" class="form-control" name="LibraryUrl" value="@Model.LibraryUrl" maxlength="500" placeholder="https://" />
                                <small class="text-muted">External link to game library</small>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- External IDs & Media -->
                <div class="card mb-4">
                    <div class="card-header bg-secondary text-white">
                        <h5 class="mb-0"><i class="bi bi-link-45deg"></i> External IDs & Media</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Google Place ID</label>
                                <input type="text" class="form-control" name="GooglePlaceId" value="@Model.GooglePlaceId" maxlength="200" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Local Image Path</label>
                                <input type="text" class="form-control" name="LocalImagePath" value="@Model.LocalImagePath" maxlength="500" />
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Meta Description</label>
                            <textarea class="form-control" name="MetaDescription" rows="2" maxlength="500">@Model.MetaDescription</textarea>
                            <small class="text-muted">SEO description for search engines</small>
                        </div>
                    </div>
                </div>

                <!-- Status -->
                <div class="card mb-4">
                    <div class="card-header bg-dark text-white">
                        <h5 class="mb-0"><i class="bi bi-toggle-on"></i> Status</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" name="IsActive" id="isActive" value="true" @(Model.IsActive ? "checked" : "") />
                                    <label class="form-check-label" for="isActive">Active</label>
                                </div>
                                <small class="text-muted">Visible on the website</small>
                            </div>
                            <div class="col-md-4">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" name="IsVerified" id="isVerified" value="true" @(Model.IsVerified ? "checked" : "") />
                                    <label class="form-check-label" for="isVerified">Verified</label>
                                </div>
                                <small class="text-muted">Confirmed accurate info</small>
                            </div>
                            <div class="col-md-4">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" name="IsPremium" id="isPremium" value="true" @(Model.IsPremium ? "checked" : "") />
                                    <label class="form-check-label" for="isPremium">Premium</label>
                                </div>
                                <small class="text-muted">Featured listing</small>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Actions -->
                <div class="d-flex justify-content-between mb-4">
                    <a href="/Test/Cafes" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle"></i> Cancel
                    </a>
                    <div>
                        @if (isEdit)
                        {
                            <button type="button" class="btn btn-danger me-2" id="deleteBtn">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                        }
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-check-circle"></i> @(isEdit ? "Save Changes" : "Create Cafe")
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
<script>
    $(document).ready(function() {
        // Auto-generate slug from name
        $('input[name="Name"]').on('blur', function() {
            const name = $(this).val();
            const slug = $('#slugInput').val();

            // Only auto-generate if slug is empty or matches old auto-generated pattern
            if (!slug || slug === '') {
                const newSlug = name.toLowerCase()
                    .replace(/[^a-z0-9\s-]/g, '')
                    .replace(/\s+/g, '-')
                    .replace(/-+/g, '-')
                    .replace(/^-|-$/g, '');
                $('#slugInput').val(newSlug);
            }
        });

        // Geocode from address
        $('#geocodeBtn').on('click', function() {
            const address = $('input[name="Address"]').val();
            const city = $('input[name="City"]').val();
            const state = $('input[name="State"]').val();
            const country = $('input[name="Country"]').val();

            const fullAddress = [address, city, state, country].filter(x => x).join(', ');

            if (!fullAddress) {
                alert('Please enter an address first');
                return;
            }

            const btn = $(this);
            btn.prop('disabled', true).html('<span class="spinner-border spinner-border-sm"></span> Geocoding...');

            // Use Nominatim (OpenStreetMap) for geocoding - free, no API key needed
            $.ajax({
                url: 'https://nominatim.openstreetmap.org/search',
                data: {
                    q: fullAddress,
                    format: 'json',
                    limit: 1
                },
                success: function(data) {
                    if (data && data.length > 0) {
                        $('#latInput').val(data[0].lat);
                        $('#lngInput').val(data[0].lon);
                        btn.html('<i class="bi bi-check"></i> Found!').removeClass('btn-outline-info').addClass('btn-success');
                        setTimeout(() => {
                            btn.html('<i class="bi bi-search"></i> Geocode from Address').removeClass('btn-success').addClass('btn-outline-info').prop('disabled', false);
                        }, 2000);
                    } else {
                        alert('Could not find coordinates for this address. Please enter manually.');
                        btn.html('<i class="bi bi-search"></i> Geocode from Address').prop('disabled', false);
                    }
                },
                error: function() {
                    alert('Geocoding service error. Please enter coordinates manually.');
                    btn.html('<i class="bi bi-search"></i> Geocode from Address').prop('disabled', false);
                }
            });
        });

        @if (isEdit)
        {
            <text>
            // Delete button
            $('#deleteBtn').on('click', function() {
                if (!confirm('Are you sure you want to delete this cafe?\n\nThis will also delete all associated games, reviews, and photos.\n\nThis action cannot be undone!')) {
                    return;
                }

                const btn = $(this);
                btn.prop('disabled', true).html('<span class="spinner-border spinner-border-sm"></span> Deleting...');

                $.ajax({
                    url: '/Test/DeleteCafe/@Model.CafeId',
                    method: 'POST',
                    success: function(response) {
                        if (response.success) {
                            window.location.href = '/Test/Cafes';
                        } else {
                            alert('Error: ' + response.message);
                            btn.prop('disabled', false).html('<i class="bi bi-trash"></i> Delete');
                        }
                    },
                    error: function() {
                        alert('An error occurred while deleting.');
                        btn.prop('disabled', false).html('<i class="bi bi-trash"></i> Delete');
                    }
                });
            });
            </text>
        }
    });
</script>
}
