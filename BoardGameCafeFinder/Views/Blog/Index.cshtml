@model List<BoardGameCafeFinder.Models.Domain.BlogPost>
@{
    ViewData["Title"] = "Blog - Board Game Cafe Finder";
    ViewData["MetaDescription"] = "Read our blog for tips, guides, and insights about board game cafes. Discover top games, city guides, and more.";
    Layout = "_UserLayout";

    var filterType = ViewBag.FilterType as string;
    var filterValue = ViewBag.FilterValue as string;
    var categories = ViewBag.Categories as List<string> ?? new List<string>();
    var cities = ViewBag.Cities as List<string> ?? new List<string>();
    var currentPage = (int)(ViewBag.CurrentPage ?? 1);
    var totalPages = (int)(ViewBag.TotalPages ?? 1);
}

<!-- Hero Section -->
<div class="bg-gradient-primary text-white py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h1 class="display-5 fw-bold mb-3">
                    <i class="bi bi-journal-richtext me-3"></i>Board Game Cafe Blog
                </h1>
                <p class="lead opacity-90">
                    Tips, guides, and insights about board game cafes around the world
                </p>
            </div>
        </div>
    </div>
</div>

<div class="container py-5">
    <div class="row">
        <!-- Main Content -->
        <div class="col-lg-8">
            @if (!string.IsNullOrEmpty(filterType))
            {
                <div class="alert alert-info mb-4">
                    <i class="bi bi-funnel me-2"></i>
                    Showing posts for <strong>@filterType</strong>: @filterValue
                    <a href="/Blog" class="ms-2">Clear filter</a>
                </div>
            }

            @if (Model.Any())
            {
                <div class="row">
                    @foreach (var post in Model)
                    {
                        <div class="col-md-6 mb-4">
                            <div class="card h-100 shadow-sm blog-card">
                                @if (!string.IsNullOrEmpty(post.FeaturedImage))
                                {
                                    <img src="@post.FeaturedImage" class="card-img-top" alt="@post.Title" style="height: 180px; object-fit: cover;">
                                }
                                else
                                {
                                    <div class="card-img-top bg-gradient-primary d-flex align-items-center justify-content-center text-white" style="height: 180px;">
                                        <i class="bi bi-newspaper display-4 opacity-50"></i>
                                    </div>
                                }
                                <div class="card-body">
                                    <div class="mb-2">
                                        @if (!string.IsNullOrEmpty(post.Category))
                                        {
                                            <a href="/Blog?category=@Uri.EscapeDataString(post.Category)" class="badge bg-primary text-decoration-none">@post.Category</a>
                                        }
                                        @if (!string.IsNullOrEmpty(post.RelatedCity))
                                        {
                                            <a href="/Blog?city=@Uri.EscapeDataString(post.RelatedCity)" class="badge bg-secondary text-decoration-none">
                                                <i class="bi bi-geo-alt"></i> @post.RelatedCity
                                            </a>
                                        }
                                    </div>
                                    <h5 class="card-title">
                                        <a href="/blog/@post.Slug" class="text-decoration-none text-dark stretched-link">@post.Title</a>
                                    </h5>
                                    @if (!string.IsNullOrEmpty(post.Summary))
                                    {
                                        <p class="card-text text-muted small">
                                            @(post.Summary.Length > 120 ? post.Summary.Substring(0, 117) + "..." : post.Summary)
                                        </p>
                                    }
                                </div>
                                <div class="card-footer bg-transparent border-0">
                                    <small class="text-muted">
                                        <i class="bi bi-calendar me-1"></i>
                                        @(post.PublishedAt?.ToString("MMMM dd, yyyy") ?? post.CreatedAt.ToString("MMMM dd, yyyy"))
                                        @if (post.ViewCount > 0)
                                        {
                                            <span class="ms-2"><i class="bi bi-eye me-1"></i>@post.ViewCount views</span>
                                        }
                                    </small>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <!-- Pagination -->
                @if (totalPages > 1)
                {
                    <nav aria-label="Blog pagination" class="mt-4">
                        <ul class="pagination justify-content-center">
                            <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                                <a class="page-link" href="/Blog?page=@(currentPage - 1)@(filterType == "Category" ? "&category=" + filterValue : "")@(filterType == "City" ? "&city=" + filterValue : "")">
                                    <i class="bi bi-chevron-left"></i>
                                </a>
                            </li>
                            @for (int i = 1; i <= totalPages; i++)
                            {
                                <li class="page-item @(i == currentPage ? "active" : "")">
                                    <a class="page-link" href="/Blog?page=@i@(filterType == "Category" ? "&category=" + filterValue : "")@(filterType == "City" ? "&city=" + filterValue : "")">@i</a>
                                </li>
                            }
                            <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                                <a class="page-link" href="/Blog?page=@(currentPage + 1)@(filterType == "Category" ? "&category=" + filterValue : "")@(filterType == "City" ? "&city=" + filterValue : "")">
                                    <i class="bi bi-chevron-right"></i>
                                </a>
                            </li>
                        </ul>
                    </nav>
                }
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-journal-x display-1 text-muted"></i>
                    <h4 class="mt-3">No posts found</h4>
                    <p class="text-muted">Check back soon for new content!</p>
                    @if (!string.IsNullOrEmpty(filterType))
                    {
                        <a href="/Blog" class="btn btn-primary">View All Posts</a>
                    }
                </div>
            }
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Categories -->
            @if (categories.Any())
            {
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-white">
                        <h5 class="mb-0"><i class="bi bi-tags me-2"></i>Categories</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex flex-wrap gap-2">
                            @foreach (var category in categories)
                            {
                                <a href="/Blog?category=@Uri.EscapeDataString(category)"
                                   class="btn btn-sm @(filterValue == category ? "btn-primary" : "btn-outline-primary")">
                                    @category
                                </a>
                            }
                        </div>
                    </div>
                </div>
            }

            <!-- Cities -->
            @if (cities.Any())
            {
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-white">
                        <h5 class="mb-0"><i class="bi bi-geo-alt me-2"></i>Browse by City</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex flex-wrap gap-2">
                            @foreach (var city in cities.Take(15))
                            {
                                <a href="/Blog?city=@Uri.EscapeDataString(city)"
                                   class="btn btn-sm @(filterValue == city ? "btn-secondary" : "btn-outline-secondary")">
                                    @city
                                </a>
                            }
                        </div>
                    </div>
                </div>
            }

            <!-- About -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>About This Blog</h5>
                </div>
                <div class="card-body">
                    <p class="text-muted mb-0">
                        Discover the world of board game cafes! We share guides, tips, and insights to help you find the perfect gaming spot and make the most of your visits.
                    </p>
                </div>
            </div>

            <!-- CTA -->
            <div class="card shadow-sm bg-gradient-primary text-white">
                <div class="card-body text-center py-4">
                    <i class="bi bi-map display-4 mb-3"></i>
                    <h5>Find Cafes Near You</h5>
                    <p class="small opacity-90">Explore our interactive map to discover board game cafes in your area.</p>
                    <a href="/Map" class="btn btn-light">
                        <i class="bi bi-map me-1"></i> Open Map
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-gradient-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .blog-card {
        transition: transform 0.2s, box-shadow 0.2s;
    }

    .blog-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }
</style>
