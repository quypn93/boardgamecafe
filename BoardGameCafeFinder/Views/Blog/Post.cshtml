@model BoardGameCafeFinder.Models.Domain.BlogPost
@{
    ViewData["Title"] = Model.MetaTitle ?? Model.Title;
    ViewData["MetaDescription"] = Model.MetaDescription ?? Model.Summary ?? "Read this article on Board Game Cafe Finder.";
    ViewData["CanonicalUrl"] = $"{Context.Request.Scheme}://{Context.Request.Host}/blog/{Model.Slug}";
    Layout = "_UserLayout";

    var relatedPosts = ViewBag.RelatedPosts as List<BoardGameCafeFinder.Models.Domain.BlogPost> ?? new List<BoardGameCafeFinder.Models.Domain.BlogPost>();
}

<!-- Featured Image Header -->
@if (!string.IsNullOrEmpty(Model.FeaturedImage))
{
    <div class="blog-hero" style="background-image: url('@Model.FeaturedImage');">
        <div class="blog-hero-overlay">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-8 text-center text-white">
                        @if (!string.IsNullOrEmpty(Model.Category))
                        {
                            <a href="/Blog?category=@Uri.EscapeDataString(Model.Category)" class="badge bg-primary mb-3 text-decoration-none">@Model.Category</a>
                        }
                        <h1 class="display-5 fw-bold">@Model.Title</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="bg-gradient-primary text-white py-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8 text-center">
                    @if (!string.IsNullOrEmpty(Model.Category))
                    {
                        <span class="badge bg-light text-primary mb-3">@Model.Category</span>
                    }
                    <h1 class="display-5 fw-bold">@Model.Title</h1>
                </div>
            </div>
        </div>
    </div>
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Breadcrumb -->
            <nav aria-label="breadcrumb" class="mb-4">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item"><a href="/Blog">Blog</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@Model.Title</li>
                </ol>
            </nav>

            <!-- Post Meta -->
            <div class="d-flex flex-wrap align-items-center gap-3 mb-4 text-muted">
                @if (!string.IsNullOrEmpty(Model.Author))
                {
                    <span>
                        <i class="bi bi-person me-1"></i> @Model.Author
                    </span>
                }
                <span>
                    <i class="bi bi-calendar me-1"></i>
                    @(Model.PublishedAt?.ToString("MMMM dd, yyyy") ?? Model.CreatedAt.ToString("MMMM dd, yyyy"))
                </span>
                @if (Model.ViewCount > 0)
                {
                    <span>
                        <i class="bi bi-eye me-1"></i> @Model.ViewCount views
                    </span>
                }
                @if (!string.IsNullOrEmpty(Model.RelatedCity))
                {
                    <a href="/Blog?city=@Uri.EscapeDataString(Model.RelatedCity)" class="text-decoration-none">
                        <i class="bi bi-geo-alt me-1"></i> @Model.RelatedCity
                    </a>
                }
            </div>

            <!-- Summary -->
            @if (!string.IsNullOrEmpty(Model.Summary))
            {
                <div class="alert alert-light border-start border-primary border-4 mb-4">
                    <p class="lead mb-0">@Model.Summary</p>
                </div>
            }

            <!-- Content -->
            <article class="blog-content">
                @Html.Raw(Model.Content)
            </article>

            <!-- Tags -->
            @if (!string.IsNullOrEmpty(Model.Tags))
            {
                <div class="mt-5 pt-4 border-top">
                    <h6 class="text-muted mb-3"><i class="bi bi-tags me-2"></i>Tags</h6>
                    <div class="d-flex flex-wrap gap-2">
                        @foreach (var tag in Model.Tags.Split(',', StringSplitOptions.RemoveEmptyEntries))
                        {
                            <span class="badge bg-light text-dark">@tag.Trim()</span>
                        }
                    </div>
                </div>
            }

            <!-- Share -->
            <div class="mt-4 pt-4 border-top">
                <h6 class="text-muted mb-3"><i class="bi bi-share me-2"></i>Share this article</h6>
                <div class="d-flex gap-2">
                    <a href="https://www.facebook.com/sharer/sharer.php?u=@Uri.EscapeDataString($"{Context.Request.Scheme}://{Context.Request.Host}/blog/{Model.Slug}")"
                       target="_blank" class="btn btn-outline-primary btn-sm">
                        <i class="bi bi-facebook"></i> Facebook
                    </a>
                    <a href="https://twitter.com/intent/tweet?url=@Uri.EscapeDataString($"{Context.Request.Scheme}://{Context.Request.Host}/blog/{Model.Slug}")&text=@Uri.EscapeDataString(Model.Title)"
                       target="_blank" class="btn btn-outline-dark btn-sm">
                        <i class="bi bi-twitter-x"></i> Twitter
                    </a>
                    <a href="mailto:?subject=@Uri.EscapeDataString(Model.Title)&body=@Uri.EscapeDataString($"Check out this article: {Context.Request.Scheme}://{Context.Request.Host}/blog/{Model.Slug}")"
                       class="btn btn-outline-secondary btn-sm">
                        <i class="bi bi-envelope"></i> Email
                    </a>
                    <button type="button" class="btn btn-outline-success btn-sm" onclick="copyUrl()">
                        <i class="bi bi-link-45deg"></i> Copy Link
                    </button>
                </div>
                <div id="copyAlert" class="alert alert-success py-1 px-2 mt-2 small d-none">Link copied!</div>
            </div>

            <!-- Related Posts -->
            @if (relatedPosts.Any())
            {
                <div class="mt-5 pt-4 border-top">
                    <h4 class="mb-4"><i class="bi bi-collection me-2"></i>Related Posts</h4>
                    <div class="row">
                        @foreach (var related in relatedPosts)
                        {
                            <div class="col-md-4 mb-3">
                                <div class="card h-100 shadow-sm">
                                    @if (!string.IsNullOrEmpty(related.FeaturedImage))
                                    {
                                        <img src="@related.FeaturedImage" class="card-img-top" alt="@related.Title" style="height: 120px; object-fit: cover;">
                                    }
                                    else
                                    {
                                        <div class="card-img-top bg-gradient-primary d-flex align-items-center justify-content-center text-white" style="height: 120px;">
                                            <i class="bi bi-newspaper display-6 opacity-50"></i>
                                        </div>
                                    }
                                    <div class="card-body">
                                        <h6 class="card-title">
                                            <a href="/blog/@related.Slug" class="text-decoration-none text-dark stretched-link">
                                                @(related.Title.Length > 50 ? related.Title.Substring(0, 47) + "..." : related.Title)
                                            </a>
                                        </h6>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }

            <!-- CTA -->
            @if (!string.IsNullOrEmpty(Model.RelatedCity))
            {
                <div class="card bg-gradient-primary text-white mt-5">
                    <div class="card-body text-center py-4">
                        <i class="bi bi-map display-4 mb-3"></i>
                        <h4>Looking for cafes in @Model.RelatedCity?</h4>
                        <p class="opacity-90">Explore all board game cafes in this city on our interactive map.</p>
                        <a href="/?city=@Uri.EscapeDataString(Model.RelatedCity)" class="btn btn-light me-2">
                            <i class="bi bi-list me-1"></i> View Cafes
                        </a>
                        <a href="/Map" class="btn btn-outline-light">
                            <i class="bi bi-map me-1"></i> Open Map
                        </a>
                    </div>
                </div>
            }

            <!-- Back to Blog -->
            <div class="text-center mt-5">
                <a href="/Blog" class="btn btn-outline-primary">
                    <i class="bi bi-arrow-left me-2"></i> Back to Blog
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-gradient-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .blog-hero {
        height: 400px;
        background-size: cover;
        background-position: center;
        position: relative;
    }

    .blog-hero-overlay {
        height: 100%;
        background: linear-gradient(to bottom, rgba(0,0,0,0.3), rgba(0,0,0,0.7));
        display: flex;
        align-items: flex-end;
        padding-bottom: 3rem;
    }

    .blog-content {
        font-size: 1.1rem;
        line-height: 1.8;
    }

    .blog-content h2 {
        margin-top: 2rem;
        margin-bottom: 1rem;
        padding-bottom: 0.5rem;
        border-bottom: 2px solid #667eea;
    }

    .blog-content h3 {
        margin-top: 1.5rem;
        margin-bottom: 0.75rem;
    }

    .blog-content p {
        margin-bottom: 1.5rem;
    }

    .blog-content ul, .blog-content ol {
        margin-bottom: 1.5rem;
    }

    .blog-content li {
        margin-bottom: 0.5rem;
    }

    .blog-content .game-card,
    .blog-content .cafe-card {
        background: #f8f9fa;
        border-radius: 8px;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
        border-left: 4px solid #667eea;
    }

    .blog-content .game-card h3,
    .blog-content .cafe-card h3 {
        margin-top: 0;
        color: #333;
    }

    .blog-content .game-details {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        margin-top: 0.75rem;
    }

    .blog-content a {
        color: #667eea;
    }

    .blog-content a:hover {
        color: #764ba2;
    }
</style>

<script>
    function copyUrl() {
        navigator.clipboard.writeText(window.location.href).then(function() {
            var alert = document.getElementById('copyAlert');
            alert.classList.remove('d-none');
            setTimeout(function() {
                alert.classList.add('d-none');
            }, 2000);
        });
    }
</script>
