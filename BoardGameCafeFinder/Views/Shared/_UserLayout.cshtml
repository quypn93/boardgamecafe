<!DOCTYPE html>
<html lang="@(Context.Items["Culture"]?.ToString() ?? "en")">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="@(ViewData["MetaDescription"] ?? ViewData["Description"] ?? "Find the best board game cafes near you. Discover board game lounges with our interactive map and comprehensive cafe directory.")" />
    <meta name="keywords" content="@(ViewData["Keywords"] ?? "board game cafe, board game lounge, tabletop gaming, board games near me, cafe finder")" />
    <meta name="author" content="Board Game Cafe Finder" />
    <meta property="og:title" content="@(ViewData["Title"] ?? "Board Game Cafe Finder") - Board Game Cafe Finder" />
    <meta property="og:description" content="@(ViewData["MetaDescription"] ?? ViewData["Description"] ?? "Find the best board game cafes near you. Discover board game lounges with our interactive map.")" />
    <meta property="og:image" content="@(ViewData["OGImage"] ?? "/logo.svg")" />
    <meta property="og:type" content="@(ViewData["OGType"] ?? "website")" />
    <meta property="og:url" content="@(ViewData["CanonicalUrl"] ?? $"{Context.Request.Scheme}://{Context.Request.Host}{Context.Request.Path}")" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:image" content="@(ViewData["OGImage"] ?? "/logo.svg")" />
    <meta name="theme-color" content="#6f42c1" />
    <meta name="google-site-verification" content="ywtjfYRvcyLlJtKcEAsXegoTLPzexq2OUy5Su3vKQ4Y" />
    <meta name='impact-site-verification' value='b9ed2060-bd39-41a1-99fc-5685bfb102cd'>

    @{
        var pageTitle = ViewData["Title"]?.ToString() ?? "Find Board Game Cafes Near You";
        var fullTitle = pageTitle.Length < 45 ? $"{pageTitle} | Board Game Cafe Finder" : pageTitle;
    }
    <title>@fullTitle</title>

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" href="/logo.svg" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BoardGameCafeFinder.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    @if (ViewData["CanonicalUrl"] != null)
    {
        <link rel="canonical" href="@ViewData["CanonicalUrl"]" />
    }
    @await Html.PartialAsync("_HreflangTags")
    <style>
        .navbar-brand-logo {
            font-weight: bold;
            font-size: 1.3rem;
        }
        .navbar-brand-logo i {
            color: #6f42c1;
        }
        .hero-section {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }
        .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
        }
        .btn-primary:hover {
            background: linear-gradient(135deg, #5a6fd6 0%, #6a4190 100%);
        }
    </style>
    @await RenderSectionAsync("Styles", required: false)
    @await RenderSectionAsync("Head", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top">
            <div class="container">
                <a class="navbar-brand navbar-brand-logo" asp-controller="Home" asp-action="Index">
                    <img src="~/logo.svg" alt="Logo" style="height: 40px; margin-right: 8px; display: inline-block;" />
                    BoardGame Cafe Finder
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                @{
                    var controller = ViewContext.RouteData.Values["controller"]?.ToString() ?? "";
                    var action = ViewContext.RouteData.Values["action"]?.ToString() ?? "";
                }
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link @(controller == "Home" && action == "Index" ? "active" : "")" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house"></i> @SharedLocalizer["Nav_Home"]
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(controller == "Map" ? "active" : "")" asp-controller="Map" asp-action="Index">
                                <i class="bi bi-map"></i> @SharedLocalizer["Nav_MapView"]
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(controller == "Blog" ? "active" : "")" asp-controller="Blog" asp-action="Index">
                                <i class="bi bi-newspaper"></i> @SharedLocalizer["Nav_Blog"]
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle @(controller == "Listing" ? "active" : "")" href="#" id="businessDropdown"
                               role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-star"></i> @SharedLocalizer["Nav_ForBusiness"]
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="businessDropdown">
                                <li><a class="dropdown-item" href="/Listing/Pricing"><i class="bi bi-tags me-2"></i>@SharedLocalizer["Nav_Pricing"]</a></li>
                                <li><a class="dropdown-item" href="/Listing/SubmitCafe"><i class="bi bi-plus-circle me-2"></i>@SharedLocalizer["Nav_AddCafe"]</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="/Listing/Pricing#faqAccordion"><i class="bi bi-question-circle me-2"></i>@SharedLocalizer["Nav_FAQ"]</a></li>
                            </ul>
                        </li>
                    </ul>
                    <ul class="navbar-nav align-items-center">
                        <!-- Language Switcher -->
                        <li class="nav-item me-2">
                            @await Html.PartialAsync("_LanguageSwitcher")
                        </li>
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle"></i> @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <li>
                                            <a class="dropdown-item" asp-controller="Admin" asp-action="Dashboard">
                                                <i class="bi bi-speedometer2"></i> @SharedLocalizer["Nav_AdminDashboard"]
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                    }
                                    <li>
                                        <a class="dropdown-item" asp-controller="Account" asp-action="Profile">
                                            <i class="bi bi-person"></i> @SharedLocalizer["Nav_Profile"]
                                        </a>
                                    </li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                            <button type="submit" class="dropdown-item">
                                                <i class="bi bi-box-arrow-right"></i> @SharedLocalizer["Nav_Logout"]
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right"></i> @SharedLocalizer["Nav_Login"]
                                </a>
                            </li>
                            <li class="nav-item d-flex align-items-center">
                                <a class="btn btn-outline-light btn-sm ms-2 px-3" asp-controller="Account" asp-action="Register">
                                    <i class="bi bi-person-plus"></i> @SharedLocalizer["Nav_Register"]
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-0PQD14R3H3"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());

        gtag('config', 'G-0PQD14R3H3');
    </script>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="bg-dark text-light py-4 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-6 mb-3">
                    <h5><i class="bi bi-person-fill me-2"></i>Board Game Cafe Finder</h5>
                    <p class="text-muted">
                        @SharedLocalizer["Footer_Description"]
                    </p>
                </div>
                <div class="col-lg-2 col-md-3 col-6 mb-3">
                    <h6>@SharedLocalizer["Footer_Explore"]</h6>
                    <ul class="list-unstyled">
                        <li class="mb-1"><a href="/" class="text-muted text-decoration-none">@SharedLocalizer["Nav_Home"]</a></li>
                        <li class="mb-1"><a asp-controller="Map" asp-action="Index" class="text-muted text-decoration-none">@SharedLocalizer["Nav_MapView"]</a></li>
                        <li class="mb-1"><a asp-controller="Blog" asp-action="Index" class="text-muted text-decoration-none">@SharedLocalizer["Nav_Blog"]</a></li>
                        <li class="mb-1"><a href="/Listing/Pricing" class="text-muted text-decoration-none">@SharedLocalizer["Nav_ForBusiness"]</a></li>
                    </ul>
                </div>
                <div class="col-lg-2 col-md-3 col-6 mb-3">
                    <h6>@SharedLocalizer["Footer_Legal"]</h6>
                    <ul class="list-unstyled">
                        <li class="mb-1"><a asp-controller="Home" asp-action="Privacy" class="text-muted text-decoration-none">@SharedLocalizer["Footer_Privacy"]</a></li>
                        <li class="mb-1"><a asp-controller="Home" asp-action="Terms" class="text-muted text-decoration-none">@SharedLocalizer["Footer_Terms"]</a></li>
                    </ul>
                </div>
                <div class="col-lg-4 col-md-6 mb-3">
                    <h6>@SharedLocalizer["Footer_Contact"]</h6>
                    <ul class="list-unstyled text-muted">
                        <li class="mb-1"><i class="bi bi-envelope me-2"></i>support@boardgamecafefinder.com</li>
                    </ul>
                    <p class="text-muted small mt-2">
                        @SharedLocalizer["Footer_ContactText"]
                    </p>
                </div>
            </div>
            <hr class="my-3">
            <div class="text-center text-muted">
                <small>@string.Format(SharedLocalizer["Footer_Copyright"].Value, DateTime.Now.Year)</small>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
