@model RegisterViewModel
@inject IStringLocalizer<SharedResource> SharedLocalizer
@{
    ViewData["Title"] = SharedLocalizer["Account_Register"].Value;
    Layout = "_UserLayout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-success text-white text-center">
                    <h4 class="mb-0"><i class="bi bi-person-plus"></i> @SharedLocalizer["Account_CreateAccount"]</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Register" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="FirstName" class="form-label">@SharedLocalizer["Account_FirstName"]</label>
                                <input asp-for="FirstName" class="form-control" placeholder="John" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="LastName" class="form-label">@SharedLocalizer["Account_LastName"]</label>
                                <input asp-for="LastName" class="form-control" placeholder="Doe" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">@SharedLocalizer["Account_Email"]</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                                <input asp-for="Email" class="form-control" placeholder="your@email.com" autocomplete="email" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">@SharedLocalizer["Account_Password"]</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-lock"></i></span>
                                <input asp-for="Password" class="form-control" placeholder="@SharedLocalizer["Account_Password"]" autocomplete="new-password" />
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                            <small class="text-muted">@SharedLocalizer["Account_PasswordHint"]</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label">@SharedLocalizer["Account_ConfirmPassword"]</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                                <input asp-for="ConfirmPassword" class="form-control" placeholder="@SharedLocalizer["Account_ConfirmPassword"]" autocomplete="new-password" />
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <!-- Cafe Owner Option -->
                        <div class="mb-4 p-3 bg-light rounded">
                            <div class="form-check">
                                <input asp-for="IsCafeOwner" class="form-check-input" id="isCafeOwner" />
                                <label asp-for="IsCafeOwner" class="form-check-label fw-bold">
                                    <i class="bi bi-shop me-1"></i> @SharedLocalizer["Account_IsCafeOwner"]
                                </label>
                            </div>
                            <small class="text-muted d-block mt-2">
                                @SharedLocalizer["Account_CafeOwnerHint"]
                            </small>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="bi bi-person-plus"></i> @SharedLocalizer["Account_CreateAccount"]
                            </button>
                        </div>
                    </form>

                    <hr class="my-4">

                    <div class="text-center">
                        <p class="mb-0">@SharedLocalizer["Account_AlreadyHaveAccount"]</p>
                        <a asp-action="Login" class="btn btn-outline-primary mt-2">
                            <i class="bi bi-box-arrow-in-right"></i> @SharedLocalizer["Account_Login"]
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            // Reset validation state when user changes email after server error
            var $form = $('form');
            var $validationSummary = $form.find('[data-valmsg-summary="true"]');

            // When any input changes, clear server-side validation errors
            $form.find('input').on('input', function() {
                // Clear the validation summary (server-side errors)
                if ($validationSummary.hasClass('validation-summary-errors')) {
                    $validationSummary.removeClass('validation-summary-errors')
                                      .addClass('validation-summary-valid');
                    $validationSummary.find('ul').empty();
                }
            });

            // Reset validator when email field changes specifically
            $('#Email').on('input', function() {
                var validator = $form.validate();
                if (validator) {
                    // Clear errors for this field
                    validator.resetForm();
                    $form.find('.field-validation-error')
                         .removeClass('field-validation-error')
                         .addClass('field-validation-valid')
                         .empty();
                }
            });
        });
    </script>
}
