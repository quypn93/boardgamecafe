@{
    ViewData["Title"] = "Access Denied";
    Layout = "_UserLayout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <div class="card shadow">
                <div class="card-body p-5">
                    <i class="bi bi-shield-exclamation text-danger" style="font-size: 5rem;"></i>
                    <h1 class="mt-4">Access Denied</h1>
                    <p class="text-muted">You don't have permission to access this page.</p>
                    <hr>
                    <a href="/" class="btn btn-primary">
                        <i class="bi bi-house"></i> Go Home
                    </a>
                    <a asp-controller="Account" asp-action="Login" class="btn btn-outline-secondary ms-2">
                        <i class="bi bi-box-arrow-in-right"></i> Login as Different User
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
