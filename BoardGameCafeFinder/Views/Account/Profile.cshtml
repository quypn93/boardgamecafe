@model BoardGameCafeFinder.Models.Domain.User
@{
    ViewData["Title"] = "My Profile";
    Layout = "_UserLayout";
}

<div class="container py-5">
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mb-4">
            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show mb-4">
            <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @{
        var emailConfirmed = ViewBag.EmailConfirmed as bool? ?? false;
        var requireEmailConfirmation = ViewBag.RequireEmailConfirmation as bool? ?? false;
    }
    @if (requireEmailConfirmation && !emailConfirmed)
    {
        <div class="alert alert-warning mb-4">
            <div class="d-flex align-items-center justify-content-between">
                <div>
                    <i class="bi bi-envelope-exclamation me-2"></i>
                    <strong>Email not verified.</strong> Please check your inbox and confirm your email address.
                </div>
                <form asp-action="ResendConfirmation" method="post" class="d-inline">
                    <button type="submit" class="btn btn-warning btn-sm">
                        <i class="bi bi-envelope me-1"></i> Resend Email
                    </button>
                </form>
            </div>
        </div>
    }
    <div class="row">
        <!-- Profile Sidebar -->
        <div class="col-lg-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <div class="avatar-circle mx-auto mb-3 position-relative" style="width: 120px;">
                        @if (!string.IsNullOrEmpty(Model.AvatarUrl))
                        {
                            <img src="@Model.AvatarUrl" alt="Avatar" class="rounded-circle" style="width: 120px; height: 120px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="avatar-placeholder rounded-circle d-flex align-items-center justify-content-center mx-auto" style="width: 120px; height: 120px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                                <span class="text-white display-4">@Model.FirstName?.FirstOrDefault()@Model.LastName?.FirstOrDefault()</span>
                            </div>
                        }
                        <button type="button" class="btn btn-primary btn-sm rounded-circle position-absolute"
                                style="bottom: 0; right: 0; width: 32px; height: 32px; padding: 0;"
                                data-bs-toggle="modal" data-bs-target="#avatarModal" title="Change Avatar">
                            <i class="bi bi-camera"></i>
                        </button>
                    </div>
                    <h4 class="mb-1">@Model.DisplayName</h4>
                    <p class="text-muted mb-3">
                        @Model.Email
                        @if (requireEmailConfirmation && emailConfirmed)
                        {
                            <i class="bi bi-patch-check-fill text-success ms-1" title="Email verified"></i>
                        }
                    </p>

                    <div class="d-flex justify-content-center gap-3 mb-3">
                        <div class="text-center">
                            <h5 class="mb-0">@Model.TotalReviews</h5>
                            <small class="text-muted">Reviews</small>
                        </div>
                        <div class="text-center">
                            <h5 class="mb-0">@Model.TotalBookings</h5>
                            <small class="text-muted">Visits</small>
                        </div>
                        <div class="text-center">
                            <h5 class="mb-0">@Model.ReputationScore</h5>
                            <small class="text-muted">Points</small>
                        </div>
                    </div>

                    <hr>

                    <p class="small text-muted mb-1">
                        <i class="bi bi-calendar3 me-1"></i> Member since @Model.CreatedAt.ToString("MMMM yyyy")
                    </p>
                    @if (Model.LastLoginAt.HasValue)
                    {
                        <p class="small text-muted mb-0">
                            <i class="bi bi-clock me-1"></i> Last login @Model.LastLoginAt.Value.ToString("MMM dd, yyyy")
                        </p>
                    }
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="card shadow-sm mt-3">
                <div class="card-header bg-white">
                    <h6 class="mb-0"><i class="bi bi-lightning me-2"></i>Quick Actions</h6>
                </div>
                <div class="list-group list-group-flush">
                    <a href="/" class="list-group-item list-group-item-action">
                        <i class="bi bi-search me-2"></i> Find Cafes
                    </a>
                    <a href="/Map" class="list-group-item list-group-item-action">
                        <i class="bi bi-map me-2"></i> Map View
                    </a>
                    @if (Model.IsCafeOwner && Model.CafeId.HasValue)
                    {
                        <a href="/Listing/Admin" class="list-group-item list-group-item-action">
                            <i class="bi bi-shop me-2"></i> Manage My Cafe
                        </a>
                    }
                </div>
            </div>
        </div>

        <!-- Profile Content -->
        <div class="col-lg-8">
            <!-- Edit Profile Card -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-person me-2"></i>Profile Information</h5>
                    <button class="btn btn-outline-primary btn-sm" id="editProfileBtn">
                        <i class="bi bi-pencil"></i> Edit
                    </button>
                </div>
                <div class="card-body">
                    <form id="profileForm" asp-action="UpdateProfile" method="post">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">First Name</label>
                                <input type="text" class="form-control" name="FirstName" value="@Model.FirstName" readonly>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Last Name</label>
                                <input type="text" class="form-control" name="LastName" value="@Model.LastName" readonly>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Email</label>
                                <input type="email" class="form-control" value="@Model.Email" readonly disabled>
                                <small class="text-muted">Email cannot be changed</small>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Display Name</label>
                                <input type="text" class="form-control" name="DisplayName" value="@Model.DisplayName" readonly>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">City</label>
                                <input type="text" class="form-control" name="City" value="@Model.City" readonly>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Country</label>
                                <input type="text" class="form-control" name="Country" value="@Model.Country" readonly>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Bio</label>
                            <textarea class="form-control" name="Bio" rows="3" readonly>@Model.Bio</textarea>
                        </div>
                        <div class="d-none" id="saveButtons">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check"></i> Save Changes
                            </button>
                            <button type="button" class="btn btn-outline-secondary" id="cancelEditBtn">
                                Cancel
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Change Password Card -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="bi bi-shield-lock me-2"></i>Change Password</h5>
                </div>
                <div class="card-body">
                    <form asp-action="ChangePassword" method="post">
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label class="form-label">Current Password</label>
                                <input type="password" class="form-control" name="CurrentPassword" required>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label class="form-label">New Password</label>
                                <input type="password" class="form-control" name="NewPassword" required>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label class="form-label">Confirm New Password</label>
                                <input type="password" class="form-control" name="ConfirmNewPassword" required>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-warning">
                            <i class="bi bi-key"></i> Change Password
                        </button>
                    </form>
                </div>
            </div>

            <!-- Cafe Owner Section -->
            @if (!Model.IsCafeOwner)
            {
                <div class="card shadow-sm border-primary">
                    <div class="card-body text-center py-4">
                        <i class="bi bi-shop display-4 text-primary mb-3"></i>
                        <h5>Own a Board Game Cafe?</h5>
                        <p class="text-muted">Claim your business and manage your listing to attract more customers.</p>
                        <a href="/Listing/Pricing" class="btn btn-primary">
                            <i class="bi bi-star me-1"></i> Learn About Premium Listings
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<!-- Avatar Upload Modal -->
<div class="modal fade" id="avatarModal" tabindex="-1" aria-labelledby="avatarModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="avatarModalLabel"><i class="bi bi-image me-2"></i>Change Avatar</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-action="UpdateAvatar" method="post" enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="text-center mb-4">
                        @if (!string.IsNullOrEmpty(Model.AvatarUrl))
                        {
                            <img src="@Model.AvatarUrl" alt="Current Avatar" class="rounded-circle mb-3" style="width: 100px; height: 100px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="avatar-placeholder rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3" style="width: 100px; height: 100px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                                <span class="text-white display-5">@Model.FirstName?.FirstOrDefault()@Model.LastName?.FirstOrDefault()</span>
                            </div>
                        }
                    </div>

                    <div class="mb-3">
                        <label for="avatarFile" class="form-label">Select new avatar</label>
                        <input type="file" class="form-control" id="avatarFile" name="avatar" accept="image/jpeg,image/png,image/gif,image/webp" required>
                        <div class="form-text">Allowed: JPG, PNG, GIF, WebP. Max size: 5MB</div>
                    </div>

                    <div id="avatarPreview" class="text-center d-none">
                        <p class="text-muted small mb-2">Preview:</p>
                        <img id="previewImg" src="" alt="Preview" class="rounded-circle" style="width: 100px; height: 100px; object-fit: cover;">
                    </div>
                </div>
                <div class="modal-footer">
                    @if (!string.IsNullOrEmpty(Model.AvatarUrl))
                    {
                        <button type="button" class="btn btn-outline-danger me-auto" id="removeAvatarBtn">
                            <i class="bi bi-trash"></i> Remove
                        </button>
                    }
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-upload"></i> Upload
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Remove Avatar Form (hidden) -->
<form asp-action="RemoveAvatar" method="post" id="removeAvatarForm" class="d-none"></form>

@section Scripts {
<script>
    $(document).ready(function() {
        // Edit Profile
        $('#editProfileBtn').on('click', function() {
            $('#profileForm input:not([disabled]), #profileForm textarea').prop('readonly', false);
            $('#saveButtons').removeClass('d-none');
            $(this).hide();
        });

        $('#cancelEditBtn').on('click', function() {
            $('#profileForm input:not([disabled]), #profileForm textarea').prop('readonly', true);
            $('#saveButtons').addClass('d-none');
            $('#editProfileBtn').show();
            $('#profileForm')[0].reset();
        });

        // Avatar Preview
        $('#avatarFile').on('change', function() {
            var file = this.files[0];
            if (file) {
                // Validate file size (5MB)
                if (file.size > 5 * 1024 * 1024) {
                    alert('File size must be less than 5MB');
                    $(this).val('');
                    return;
                }

                var reader = new FileReader();
                reader.onload = function(e) {
                    $('#previewImg').attr('src', e.target.result);
                    $('#avatarPreview').removeClass('d-none');
                };
                reader.readAsDataURL(file);
            } else {
                $('#avatarPreview').addClass('d-none');
            }
        });

        // Remove Avatar
        $('#removeAvatarBtn').on('click', function() {
            if (confirm('Are you sure you want to remove your avatar?')) {
                $('#removeAvatarForm').submit();
            }
        });

        // Reset modal on close
        $('#avatarModal').on('hidden.bs.modal', function() {
            $('#avatarFile').val('');
            $('#avatarPreview').addClass('d-none');
        });
    });
</script>
}
