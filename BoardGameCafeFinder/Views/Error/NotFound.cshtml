@{
    ViewData["Title"] = "404 - Page Not Found";
    Layout = "_UserLayout";
}

<div class="error-page">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
                <!-- Animated 404 -->
                <div class="error-code mb-4">
                    <span class="digit">4</span>
                    <span class="digit dice">
                        <i class="bi bi-dice-6-fill"></i>
                    </span>
                    <span class="digit">4</span>
                </div>

                <h1 class="display-5 fw-bold text-muted mb-3">@(ViewBag.ErrorTitle ?? "Page Not Found")</h1>
                <p class="lead text-muted mb-4">
                    @(ViewBag.ErrorMessage ?? "Oops! The page you're looking for seems to have rolled off the table.")
                </p>

                <!-- Search suggestion -->
                <div class="card shadow-sm mb-4 mx-auto" style="max-width: 500px;">
                    <div class="card-body">
                        <p class="mb-3">Looking for a board game cafe? Try searching:</p>
                        <form action="/" method="get" class="d-flex gap-2">
                            <input type="text" name="city" class="form-control" placeholder="Enter city name...">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-search"></i>
                            </button>
                        </form>
                    </div>
                </div>

                <!-- Quick links -->
                <div class="d-flex justify-content-center gap-3 flex-wrap">
                    <a href="/" class="btn btn-primary btn-lg">
                        <i class="bi bi-house me-2"></i>Go Home
                    </a>
                    <a href="/Map" class="btn btn-outline-primary btn-lg">
                        <i class="bi bi-map me-2"></i>View Map
                    </a>
                    <a href="javascript:history.back()" class="btn btn-outline-secondary btn-lg">
                        <i class="bi bi-arrow-left me-2"></i>Go Back
                    </a>
                </div>

                <!-- Fun message -->
                <div class="mt-5 pt-4">
                    <p class="text-muted small">
                        <i class="bi bi-lightbulb me-1"></i>
                        Pro tip: While you're here, why not discover a new board game cafe in your area?
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .error-page {
        min-height: 70vh;
        display: flex;
        align-items: center;
        padding: 3rem 0;
    }

    .error-code {
        font-size: 8rem;
        font-weight: bold;
        color: #667eea;
        line-height: 1;
    }

    .error-code .digit {
        display: inline-block;
        animation: bounce 2s infinite;
    }

    .error-code .digit:nth-child(1) {
        animation-delay: 0s;
    }

    .error-code .digit:nth-child(2) {
        animation-delay: 0.2s;
    }

    .error-code .digit:nth-child(3) {
        animation-delay: 0.4s;
    }

    .error-code .dice {
        color: #764ba2;
        animation: roll 3s infinite ease-in-out;
    }

    @@keyframes bounce {
        0%, 100% {
            transform: translateY(0);
        }
        50% {
            transform: translateY(-10px);
        }
    }

    @@keyframes roll {
        0%, 100% {
            transform: rotate(0deg);
        }
        25% {
            transform: rotate(15deg);
        }
        75% {
            transform: rotate(-15deg);
        }
    }

    @@media (max-width: 576px) {
        .error-code {
            font-size: 5rem;
        }
    }
</style>
