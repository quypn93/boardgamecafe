@model List<BoardGameCafeFinder.Models.DTOs.CafeListItemDto>
@{
    Layout = "_UserLayout";
    var countries = ViewBag.Countries as List<string> ?? new List<string>();
    var cities = ViewBag.Cities as List<string> ?? new List<string>();
    var boardGames = ViewBag.BoardGames as IEnumerable<dynamic> ?? new List<dynamic>();
    var categories = ViewBag.Categories as List<string> ?? new List<string>();
    var selectedGameIds = ViewBag.SelectedGameIds as int[] ?? Array.Empty<int>();
    var selectedCategories = ViewBag.SelectedCategories as List<string> ?? new List<string>();
    var currentPage = (int)(ViewBag.CurrentPage ?? 1);
    var totalPages = (int)(ViewBag.TotalPages ?? 1);
    var totalItems = (int)(ViewBag.TotalItems ?? 0);
    var isFirstPage = currentPage == 1 && string.IsNullOrEmpty(ViewBag.SelectedCity as string) && selectedGameIds.Length == 0;

    // SEO: Title and description are set by controller, but we can enhance
    var selectedCountry = ViewBag.SelectedCountry as string;
    var selectedCity = ViewBag.SelectedCity as string;

    // SEO: Keywords based on filters
    if (!string.IsNullOrEmpty(selectedCity) && !string.IsNullOrEmpty(selectedCountry))
    {
        ViewData["Keywords"] = $"board game cafe {selectedCity}, board game lounge {selectedCity}, tabletop gaming {selectedCity}, {selectedCountry} board games";
    }
    else if (!string.IsNullOrEmpty(selectedCountry))
    {
        ViewData["Keywords"] = $"board game cafe {selectedCountry}, board game lounge {selectedCountry}, tabletop gaming {selectedCountry}";
    }
    else
    {
        ViewData["Keywords"] = "board game cafe, board game lounge, tabletop gaming, board games near me, cafe finder, game cafe directory";
    }
}

@section Head {
    <!-- Organization Schema -->
    <script type="application/ld+json">
    {
        "@@context": "https://schema.org",
        "@@type": "Organization",
        "name": "Board Game Cafe Finder",
        "url": "@($"{Context.Request.Scheme}://{Context.Request.Host}/")",
        "logo": "@($"{Context.Request.Scheme}://{Context.Request.Host}/logo.svg")",
        "description": "Find the best board game cafes near you. Discover board game lounges with our interactive map and comprehensive directory."
    }
    </script>
    <!-- WebSite Schema with SearchAction -->
    <script type="application/ld+json">
    {
        "@@context": "https://schema.org",
        "@@type": "WebSite",
        "name": "Board Game Cafe Finder",
        "url": "@($"{Context.Request.Scheme}://{Context.Request.Host}/")",
        "potentialAction": {
            "@@type": "SearchAction",
            "target": {
                "@@type": "EntryPoint",
                "urlTemplate": "@($"{Context.Request.Scheme}://{Context.Request.Host}/")?city={search_term_string}"
            },
            "query-input": "required name=search_term_string"
        }
    }
    </script>
    @if (!string.IsNullOrEmpty(selectedCity))
    {
        <!-- BreadcrumbList Schema for filtered pages -->
        <script type="application/ld+json">
        {
            "@@context": "https://schema.org",
            "@@type": "BreadcrumbList",
            "itemListElement": [
                {
                    "@@type": "ListItem",
                    "position": 1,
                    "name": "Home",
                    "item": "@($"{Context.Request.Scheme}://{Context.Request.Host}/")"
                },
                {
                    "@@type": "ListItem",
                    "position": 2,
                    "name": "@selectedCountry",
                    "item": "@($"{Context.Request.Scheme}://{Context.Request.Host}/?country={Uri.EscapeDataString(selectedCountry ?? "")}")"
                },
                {
                    "@@type": "ListItem",
                    "position": 3,
                    "name": "@selectedCity"
                }
            ]
        }
        </script>
    }
}

@* Hero Section - Hidden on mobile, shown on tablet and desktop *@
