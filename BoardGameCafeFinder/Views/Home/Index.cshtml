</div>


<div class="container-fluid mt-4" id="cafes">
    <div class="row">
        <!-- Sidebar Filters -->
        <div class="col-lg-3 col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-funnel"></i> @SharedLocalizer["Home_Filters"]</h5>
                </div>
                <div class="card-body">
                    <form method="get" action="/" id="searchForm">
                        <!-- Near Me Button -->
                        <div class="mb-3">
                            <button type="button" class="btn btn-outline-primary w-100" id="nearMeBtn">
                                <i class="bi bi-geo-alt-fill"></i> @SharedLocalizer["Home_NearMe"]
                            </button>
                        </div>

                        <!-- Country Filter -->
                        <div class="mb-3">
                            <label for="country" class="form-label fw-bold">@SharedLocalizer["Home_FilterByCountry"]</label>
                            <select class="form-select" id="country" name="country">
                                <option value="">@SharedLocalizer["Home_AllCountries"]</option>
                                @foreach (var c in countries)
                                {
                                    if (ViewBag.SelectedCountry == c)
                                    {
                                        <option value="@c" selected>@c</option>
                                    }
                                    else
                                    {
                                        <option value="@c">@c</option>
                                    }
                                }
                            </select>
                        </div>

                        <!-- City Filter -->
                        <div class="mb-3">
                            <label for="city" class="form-label fw-bold">@SharedLocalizer["Home_FilterByCity"]</label>
                            <select class="form-select" id="city" name="city">
                                <option value="">@SharedLocalizer["Home_AllCities"]</option>
                                @foreach (var c in cities)
                                {
                                    if (ViewBag.SelectedCity == c)
                                    {
                                        <option value="@c" selected>@c</option>
                                    }
                                    else
                                    {
                                        <option value="@c">@c</option>
                                    }
                                }
                            </select>
                        </div>

                        <!-- Radius Filter -->
                        <div class="mb-3">
                            <label for="radius" class="form-label fw-bold">@SharedLocalizer["Home_Radius"]</label>
                            <select class="form-select" id="radius" name="radius">
                                @{
                                    var radiusOptions = new[] { 10, 25, 50, 100, 500 };
                                }
                                @foreach (var r in radiusOptions)
                                {
                                    if (ViewBag.Radius == r)
                                    {
                                        <option value="@r" selected>@r km</option>
                                    }
                                    else
                                    {
                                        <option value="@r">@r km</option>
                                    }
                                }
                            </select>
                        </div>

                        <!-- Game Category Filter (Select2 Multiselect) -->
                        @if (categories.Any())
                        {
                            <div class="mb-3">
                                <label class="form-label fw-bold">@SharedLocalizer["Home_GameCategories"]</label>
                                <select class="form-select" id="categoriesSelect" name="categories" multiple>
                                    @foreach (var cat in categories)
                                    {
                                        if (selectedCategories.Contains(cat))
                                        {
                                            <option value="@cat" selected>@cat</option>
                                        }
                                        else
                                        {
                                            <option value="@cat">@cat</option>
                                        }
                                    }
                                </select>
                            </div>
                        }

                        <!-- Board Games Filter -->
                        @if (boardGames.Any())
                        {
                            <div class="mb-3">
                                <label class="form-label fw-bold">@SharedLocalizer["Home_BoardGamesAvailable"]</label>
                                <div class="border rounded p-2" style="max-height: 300px; overflow-y: auto;">
                                    @foreach (var game in boardGames)
                                    {
                                        <div class="form-check py-1">
                                            <input class="form-check-input game-checkbox" type="checkbox"
                                                   name="gameIds" value="@game.GameId" id="game_@game.GameId"
                                                   @(selectedGameIds.Contains((int)game.GameId) ? "checked" : "")>
                                            <label class="form-check-label" for="game_@game.GameId" style="font-size: 0.95rem;">
                                                @game.Name
                                                <span class="badge bg-secondary ms-1">@game.CafeCount</span>
                                                @if (!string.IsNullOrEmpty((string)game.Category))
                                                {
                                                    <span class="badge bg-info ms-1" style="font-size: 0.7rem;">@game.Category</span>
                                                }
                                            </label>
                                        </div>
                                    }
                                </div>
                            </div>
                        }

                        <input type="hidden" id="lat" name="lat" value="@ViewBag.UserLat">
                        <input type="hidden" id="lng" name="lng" value="@ViewBag.UserLng">
                        <input type="hidden" id="page" name="page" value="1">

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-search"></i> @SharedLocalizer["Home_ApplyFilters"]
                            </button>
                            <a href="/" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle"></i> @SharedLocalizer["Home_ClearFilters"]
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-lg-9 col-md-8">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h1 class="h3">
                    <i class="bi bi-controller"></i> @SharedLocalizer["Home_BoardGameCafes"]
                    @if (ViewBag.UserLat != null)
                    {
                        <small class="text-muted fs-6">@SharedLocalizer["Home_NearYourLocation"]</small>
                    }
                </h1>
                <span class="badge bg-info fs-6">@totalItems @SharedLocalizer["Home_CafesFound"]</span>
            </div>

            <!-- Active Filters -->
            @if (!string.IsNullOrEmpty(ViewBag.SelectedCountry as string) ||
                 !string.IsNullOrEmpty(ViewBag.SelectedCity as string) ||
                 selectedCategories.Any() ||
                 selectedGameIds.Length > 0 ||
                 ViewBag.UserLat != null)
            {
                <div class="mb-3">
                    <span class="text-muted me-2">@SharedLocalizer["Home_ActiveFilters"]</span>
                    @if (!string.IsNullOrEmpty(ViewBag.SelectedCountry as string))
                    {
                        <span class="badge bg-primary me-1">@SharedLocalizer["Home_FilterByCountry"]: @ViewBag.SelectedCountry</span>
                    }
                    @if (!string.IsNullOrEmpty(ViewBag.SelectedCity as string))
                    {
                        <span class="badge bg-primary me-1">@SharedLocalizer["Home_FilterByCity"]: @ViewBag.SelectedCity</span>
                    }
                    @if (selectedCategories.Any())
                    {
                        <span class="badge bg-info me-1">@SharedLocalizer["Home_GameCategories"]: @string.Join(", ", selectedCategories)</span>
                    }
                    @if (ViewBag.UserLat != null)
                    {
                        <span class="badge bg-success me-1">@SharedLocalizer["Home_NearMe"] (@ViewBag.Radius km)</span>
                    }
                    @if (selectedGameIds.Length > 0)
                    {
                        <span class="badge bg-warning text-dark me-1">@selectedGameIds.Length @SharedLocalizer["Home_GamesSelected"]</span>
                    }
                </div>
            }

            <!-- Results -->
            @if (Model != null && Model.Any())
            {
                <div class="row">
                    @foreach (var cafe in Model)
                    {
                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="card h-100 shadow-sm">
                                @if (!string.IsNullOrEmpty(cafe.LocalImagePath))
                                {
                                    <a href="/cafe/@cafe.Slug">
                                        <img src="@cafe.LocalImagePath" class="card-img-top" alt="@cafe.Name"
                                             loading="lazy" decoding="async"
                                             style="height: 180px; object-fit: cover;">
                                    </a>
                                }
                                else
                                {
                                    <a href="/cafe/@cafe.Slug" class="card-img-top bg-secondary d-flex align-items-center justify-content-center text-decoration-none" style="height: 180px;">
                                        <i class="bi bi-controller text-white" style="font-size: 3rem;"></i>
                                    </a>
                                }
                                <div class="card-body p-3">
                                    <h6 class="card-title mb-2">
                                        <a href="/cafe/@cafe.Slug" class="text-decoration-none text-dark">@cafe.Name</a>
                                    </h6>

                                    <div class="d-flex align-items-center mb-2">
                                        @if (cafe.AverageRating.HasValue)
                                        {
                                            <span class="badge bg-warning text-dark me-2">
                                                <i class="bi bi-star-fill"></i> @cafe.AverageRating.Value.ToString("0.0")
                                            </span>
                                        }
                                        @if (cafe.ReviewCount > 0)
                                        {
                                            <small class="text-muted">(@cafe.ReviewCount)</small>
                                        }
                                        @if (cafe.DistanceKm > 0)
                                        {
                                            <span class="badge bg-info ms-auto">@cafe.DistanceKm km</span>
                                        }
                                    </div>

                                    <p class="card-text small text-muted mb-2">
                                        <i class="bi bi-geo-alt"></i> @cafe.City, @cafe.State
                                    </p>

                                    @if (cafe.GamesCount > 0)
                                    {
                                        <div class="mb-2">
                                            <small class="text-muted">
                                                <i class="bi bi-dice-5"></i> @cafe.GamesCount @SharedLocalizer["Cafe_GamesAvailable"]
                                            </small>
                                        </div>
                                    }
                                </div>
                                <div class="card-footer bg-transparent p-2">
                                    <div class="d-flex gap-1 flex-wrap">
                                        <a href="/cafe/@cafe.Slug" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-eye"></i> @SharedLocalizer["Home_Details"]
                                        </a>
                                        @if (!string.IsNullOrEmpty(cafe.Website))
                                        {
                                            <a href="@cafe.Website" target="_blank" class="btn btn-sm btn-outline-success" title="@SharedLocalizer["Cafe_Website"]">
                                                <i class="bi bi-globe"></i> @SharedLocalizer["Cafe_Website"]
                                            </a>
                                        }
                                        @if (!string.IsNullOrEmpty(cafe.GoogleMapsUrl))
                                        {
                                            <a href="@cafe.GoogleMapsUrl" target="_blank" class="btn btn-sm btn-outline-secondary" title="@SharedLocalizer["Home_Map"]">
                                                <i class="bi bi-map"></i> @SharedLocalizer["Home_Map"]
                                            </a>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <!-- Pagination -->
                @if (totalPages > 1)
                {
                    <nav aria-label="Page navigation" class="mt-4">
                        <div class="pagination-wrapper">
                            <ul class="pagination pagination-custom justify-content-center flex-wrap">
                                <li class="page-item @(currentPage == 1 ? "disabled" : "")" title="First page">
                                    <a class="page-link" href="@BuildPageUrl(1)" aria-label="First">
                                        <i class="bi bi-chevron-double-left"></i>
                                    </a>
                                </li>
                                <li class="page-item @(currentPage == 1 ? "disabled" : "")" title="Previous page">
                                    <a class="page-link" href="@BuildPageUrl(currentPage - 1)" aria-label="Previous">
                                        <i class="bi bi-chevron-left"></i>
                                    </a>
                                </li>

                                @{
                                    var startPage = Math.Max(1, currentPage - 2);
                                    var endPage = Math.Min(totalPages, currentPage + 2);

                                    if (startPage > 1)
                                    {
                                        <li class="page-item"><a class="page-link" href="@BuildPageUrl(1)">1</a></li>
                                        if (startPage > 2)
                                        {
                                            <li class="page-item disabled"><span class="page-link">···</span></li>
                                        }
                                    }

                                    for (int i = startPage; i <= endPage; i++)
                                    {
                                        <li class="page-item @(i == currentPage ? "active" : "")">
                                            <a class="page-link" href="@BuildPageUrl(i)">@i</a>
                                        </li>
                                    }

                                    if (endPage < totalPages)
                                    {
                                        if (endPage < totalPages - 1)
                                        {
                                            <li class="page-item disabled"><span class="page-link">···</span></li>
                                        }
                                        <li class="page-item"><a class="page-link" href="@BuildPageUrl(totalPages)">@totalPages</a></li>
                                    }
                                }

                                <li class="page-item @(currentPage == totalPages ? "disabled" : "")" title="Next page">
                                    <a class="page-link" href="@BuildPageUrl(currentPage + 1)" aria-label="Next">
                                        <i class="bi bi-chevron-right"></i>
                                    </a>
                                </li>
                                <li class="page-item @(currentPage == totalPages ? "disabled" : "")" title="Last page">
                                    <a class="page-link" href="@BuildPageUrl(totalPages)" aria-label="Last">
                                        <i class="bi bi-chevron-double-right"></i>
                                    </a>
                                </li>
                            </ul>
                            <p class="text-center pagination-info mb-0 mt-3">
                                @SharedLocalizer["Home_ShowingPage"] <strong>@currentPage</strong> @SharedLocalizer["Home_Of"] <strong>@totalPages</strong>
                                <span class="text-muted">•</span>
                                <strong>@totalItems</strong> @SharedLocalizer["Home_CafesFound"]
                            </p>
                        </div>
                    </nav>
                }
            }
            else
            {
                <div class="alert alert-info">
                    <h5><i class="bi bi-info-circle me-2"></i>@SharedLocalizer["Home_NoCafesTitle"]</h5>
                    <p class="mb-0">@SharedLocalizer["Home_NoCafesMessage"]</p>
                </div>
            }
        </div>
    </div>
</div>

