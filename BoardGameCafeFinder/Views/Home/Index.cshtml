@section Scripts {
<!-- Select2 JS -->
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
<script>
    $(document).ready(function() {
        // Initialize Select2 for categories
        $('#categoriesSelect').select2({
            theme: 'bootstrap-5',
            placeholder: 'Select categories...',
            allowClear: true,
            closeOnSelect: false
        });

        // Function to trigger geolocation
        function triggerNearMe() {
            if ("geolocation" in navigator) {
                $('#nearMeBtn').html('<span class="spinner-border spinner-border-sm"></span> Getting location...');
                $('#nearMeBtn').prop('disabled', true);

                navigator.geolocation.getCurrentPosition(function(position) {
                    $('#lat').val(position.coords.latitude);
                    $('#lng').val(position.coords.longitude);
                    $('#country').val('');
                    $('#city').val('');
                    $('#page').val('1');
                    $('#searchForm').submit();
                }, function(error) {
                    // On error, just reset button - don't alert on auto-trigger
                    $('#nearMeBtn').html('<i class="bi bi-geo-alt-fill"></i> Near Me');
                    $('#nearMeBtn').prop('disabled', false);
                });
            }
        }

        // Auto-trigger Near Me on first visit
        @if (ViewBag.IsFirstVisit == true)
        {
            <text>
            triggerNearMe();
            </text>
        }

        // Near Me button click
        $('#nearMeBtn').on('click', function() {
            triggerNearMe();
        });

        // Country change - reload cities
        $('#country').on('change', function() {
            var country = $(this).val();
            $('#city').html('<option value="">Loading...</option>');

            $.get('/Home/GetCitiesByCountry', { country: country }, function(cities) {
                var options = '<option value="">All Cities</option>';
                cities.forEach(function(city) {
                    options += '<option value="' + city + '">' + city + '</option>';
                });
                $('#city').html(options);
            });

            // Clear coordinates when using filters
            $('#lat').val('');
            $('#lng').val('');
        });

        // City change - clear coordinates
        $('#city').on('change', function() {
            $('#lat').val('');
            $('#lng').val('');
        });

