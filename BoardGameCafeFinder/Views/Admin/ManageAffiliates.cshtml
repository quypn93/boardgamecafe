@model List<BoardGameCafeFinder.Models.Domain.BoardGame>
@{
    ViewData["Title"] = "Manage Affiliate Links";
    Layout = "_AdminLayout";
    var filter = ViewBag.Filter as string ?? "all";
    var search = ViewBag.Search as string ?? "";
    var clickStats = ViewBag.ClickStats as Dictionary<int, int> ?? new Dictionary<int, int>();
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2><i class="bi bi-cart-fill me-2"></i>Manage Affiliate Links</h2>
        <p class="text-muted mb-0">Add and manage Amazon affiliate URLs for board games</p>
    </div>
    <div class="d-flex gap-2">
        <a href="/Admin/ImportAffiliateUrls" class="btn btn-outline-primary">
            <i class="bi bi-upload me-1"></i> Import CSV
        </a>
        <a href="/Admin/ExportGamesWithoutAffiliate" class="btn btn-outline-secondary">
            <i class="bi bi-download me-1"></i> Export Missing
        </a>
        <a href="/Admin/AffiliateStats" class="btn btn-info">
            <i class="bi bi-graph-up me-1"></i> Statistics
        </a>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        <i class="bi bi-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Stats Cards -->
<div class="row mb-4">
    <div class="col-md-4">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-subtitle mb-1 opacity-75">Total Games</h6>
                        <h3 class="mb-0">@ViewBag.AllCount</h3>
                    </div>
                    <i class="bi bi-controller display-4 opacity-50"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-success text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-subtitle mb-1 opacity-75">With Affiliate</h6>
                        <h3 class="mb-0">@ViewBag.WithAffiliateCount</h3>
                    </div>
                    <i class="bi bi-link-45deg display-4 opacity-50"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-warning text-dark">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-subtitle mb-1 opacity-75">Missing Affiliate</h6>
                        <h3 class="mb-0">@ViewBag.WithoutAffiliateCount</h3>
                    </div>
                    <i class="bi bi-exclamation-triangle display-4 opacity-50"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Filters -->
<div class="card shadow-sm mb-4">
    <div class="card-body">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-md-4">
                <label class="form-label">Filter</label>
                <div class="btn-group w-100" role="group">
                    <a href="?filter=all&search=@search" class="btn @(filter == "all" ? "btn-primary" : "btn-outline-primary")">
                        All <span class="badge bg-white text-primary">@ViewBag.AllCount</span>
                    </a>
                    <a href="?filter=with&search=@search" class="btn @(filter == "with" ? "btn-success" : "btn-outline-success")">
                        With <span class="badge bg-white text-success">@ViewBag.WithAffiliateCount</span>
                    </a>
                    <a href="?filter=without&search=@search" class="btn @(filter == "without" ? "btn-warning" : "btn-outline-warning")">
                        Missing <span class="badge bg-white text-warning">@ViewBag.WithoutAffiliateCount</span>
                    </a>
                </div>
            </div>
            <div class="col-md-6">
                <label class="form-label">Search Game</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-search"></i></span>
                    <input type="text" name="search" class="form-control" value="@search" placeholder="Search by game name...">
                    <input type="hidden" name="filter" value="@filter">
                    <button type="submit" class="btn btn-primary">Search</button>
                </div>
            </div>
            <div class="col-md-2">
                <a href="/Admin/ManageAffiliates" class="btn btn-outline-secondary w-100">
                    <i class="bi bi-x-circle me-1"></i>Clear
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Games Table -->
<div class="card shadow-sm">
    <div class="card-header bg-white">
        <h5 class="mb-0">
            <i class="bi bi-list-ul me-2"></i>Games
            <span class="badge bg-secondary">@Model.Count shown</span>
        </h5>
    </div>
    <div class="card-body p-0">
        @if (!Model.Any())
        {
            <div class="text-center py-5 text-muted">
                <i class="bi bi-inbox display-4"></i>
                <p class="mt-3">No games found matching your criteria.</p>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 60px;"></th>
                            <th>Game Name</th>
                            <th>BGG ID</th>
                            <th>Cafes</th>
                            <th>Clicks</th>
                            <th>Affiliate URL</th>
                            <th class="text-center" style="width: 120px;">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var game in Model)
                        {
                            var clicks = clickStats.GetValueOrDefault(game.GameId, 0);
                            <tr>
                                <td>
                                    @if (!string.IsNullOrEmpty(game.ImageUrl))
                                    {
                                        <img src="@game.ImageUrl" alt="@game.Name" class="rounded" style="width: 50px; height: 50px; object-fit: cover;">
                                    }
                                    else
                                    {
                                        <div class="bg-secondary rounded d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                            <i class="bi bi-dice-5 text-white"></i>
                                        </div>
                                    }
                                </td>
                                <td>
                                    <div class="fw-bold">@game.Name</div>
                                    @if (!string.IsNullOrEmpty(game.Publisher))
                                    {
                                        <small class="text-muted">@game.Publisher</small>
                                    }
                                </td>
                                <td>
                                    @if (game.BGGId.HasValue)
                                    {
                                        <a href="https://boardgamegeek.com/boardgame/@game.BGGId" target="_blank" class="badge bg-info text-decoration-none">
                                            @game.BGGId
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    <span class="badge bg-secondary">@game.CafeGames.Count</span>
                                </td>
                                <td>
                                    @if (clicks > 0)
                                    {
                                        <span class="badge bg-success">@clicks</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">0</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(game.AmazonAffiliateUrl))
                                    {
                                        <a href="@game.AmazonAffiliateUrl" target="_blank" rel="nofollow" class="text-truncate d-inline-block" style="max-width: 250px;" title="@game.AmazonAffiliateUrl">
                                            <i class="bi bi-box-arrow-up-right me-1"></i>@game.AmazonAffiliateUrl
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted fst-italic">Not set</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <a href="/Admin/EditGameAffiliate/@game.GameId" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
    @if (Model.Count >= 100)
    {
        <div class="card-footer bg-white text-center text-muted">
            <small>Showing first 100 results. Use search to find specific games.</small>
        </div>
    }
</div>
