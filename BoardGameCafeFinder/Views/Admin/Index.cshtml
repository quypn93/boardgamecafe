@model List<BoardGameCafeFinder.Models.Domain.Cafe>
@{
    ViewData["Title"] = "BGG Sync Dashboard";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-gear-fill me-2"></i>BGG Sync Management</h2>
        <div>
            <form asp-action="SyncAll" method="post" class="d-inline">
                <button type="submit" class="btn btn-danger" onclick="return confirm('Sync all cafes? Thiss may take a while.');">
                    <i class="bi bi-arrow-repeat me-1"></i> Sync All Cafes
                </button>
            </form>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title">Sync by City</h5>
                    <form asp-action="SyncCity" method="post" class="row g-3">
                        <div class="col-8">
                            <select name="city" class="form-select" required>
                                <option value="">Select a city...</option>
                                @foreach (var city in ViewBag.Cities)
                                {
                                    <option value="@city">@city</option>
                                }
                            </select>
                        </div>
                        <div class="col-4">
                            <button type="submit" class="btn btn-primary w-100">Sync City</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow-sm border-0 bg-primary text-white">
                <div class="card-body text-center">
                    <h5 class="card-title">Total Cafes with BGG</h5>
                    <div class="display-4 fw-bold">@Model.Count(c => !string.IsNullOrEmpty(c.BggUsername))</div>
                    <p class="mb-0">Linked profiles out of @Model.Count total cafes</p>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-header bg-white border-bottom-0 pt-3">
            <h5 class="mb-0">Cafe Synchronization Status</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Cafe Name</th>
                            <th>City</th>
                            <th>BGG Username</th>
                            <th>Games</th>
                            <th class="text-center">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var cafe in Model)
                        {
                            <tr>
                                <td>
                                    <div class="fw-bold">@cafe.Name</div>
                                    <small class="text-muted">ID: @cafe.CafeId</small>
                                </td>
                                <td>@cafe.City</td>
                                <td>
                                    <form asp-action="UpdateBggUsername" method="post" class="d-flex gap-1">
                                        <input type="hidden" name="id" value="@cafe.CafeId" />
                                        <input type="text" name="bggUsername" value="@cafe.BggUsername" 
                                               class="form-control form-control-sm" placeholder="No Username" 
                                               style="width: 150px;" />
                                        <button type="submit" class="btn btn-sm btn-link p-0 text-primary" title="Save">
                                            <i class="bi bi-save"></i>
                                        </button>
                                    </form>
                                </td>
                                <td>
                                    <span class="badge bg-secondary">@(cafe.CafeGames?.Count ?? 0)</span>
                                </td>
                                <td class="text-center">
                                    @if (!string.IsNullOrEmpty(cafe.BggUsername))
                                    {
                                        <form asp-action="SyncCafe" asp-route-id="@cafe.CafeId" method="post">
                                            <button type="submit" class="btn btn-outline-primary btn-sm">
                                                <i class="bi bi-arrow-clockwise"></i> Sync
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <button class="btn btn-outline-secondary btn-sm" disabled title="Add BGG Username in DB first">
                                            <i class="bi bi-link-45deg"></i> No Link
                                        </button>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

