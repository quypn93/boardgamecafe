@model List<BoardGameCafeFinder.Models.Domain.User>
@{
    ViewData["Title"] = "User Management";
    Layout = "_AdminLayout";
    var filter = ViewBag.Filter as string ?? "all";
    var search = ViewBag.Search as string ?? "";
    var userRoles = ViewBag.UserRoles as Dictionary<int, List<string>> ?? new Dictionary<int, List<string>>();
    var currentPage = ViewBag.CurrentPage as int? ?? 1;
    var totalPages = ViewBag.TotalPages as int? ?? 1;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-people-fill me-2"></i>User Management</h2>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Stats Cards -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card shadow-sm border-0 @(filter == "all" ? "border-primary border-2" : "")">
            <a href="@Url.Action("Users", new { filter = "all", search })" class="text-decoration-none">
                <div class="card-body text-center">
                    <h6 class="card-title text-primary"><i class="bi bi-people me-1"></i> All Users</h6>
                    <div class="display-5 fw-bold text-primary">@ViewBag.TotalCount</div>
                </div>
            </a>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card shadow-sm border-0 @(filter == "admin" ? "border-danger border-2" : "")">
            <a href="@Url.Action("Users", new { filter = "admin", search })" class="text-decoration-none">
                <div class="card-body text-center">
                    <h6 class="card-title text-danger"><i class="bi bi-shield-fill me-1"></i> Admins</h6>
                    <div class="display-5 fw-bold text-danger">@ViewBag.AdminCount</div>
                </div>
            </a>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card shadow-sm border-0 @(filter == "cafeowner" ? "border-success border-2" : "")">
            <a href="@Url.Action("Users", new { filter = "cafeowner", search })" class="text-decoration-none">
                <div class="card-body text-center">
                    <h6 class="card-title text-success"><i class="bi bi-shop me-1"></i> Cafe Owners</h6>
                    <div class="display-5 fw-bold text-success">@ViewBag.CafeOwnerCount</div>
                </div>
            </a>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card shadow-sm border-0 @(filter == "locked" ? "border-warning border-2" : "")">
            <a href="@Url.Action("Users", new { filter = "locked", search })" class="text-decoration-none">
                <div class="card-body text-center">
                    <h6 class="card-title text-warning"><i class="bi bi-lock-fill me-1"></i> Locked</h6>
                    <div class="display-5 fw-bold text-warning">@ViewBag.LockedCount</div>
                </div>
            </a>
        </div>
    </div>
</div>

<!-- Search Box -->
<div class="card shadow-sm border-0 mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <input type="hidden" name="filter" value="@filter" />
            <div class="col-md-10">
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-search"></i></span>
                    <input type="text" class="form-control" name="search" value="@search"
                           placeholder="Search by email, name, or display name...">
                </div>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">Search</button>
            </div>
        </form>
    </div>
</div>

<!-- Users Table -->
<div class="card shadow-sm border-0">
    <div class="card-header bg-white border-bottom-0 pt-3">
        <h5 class="mb-0">
            @switch (filter)
            {
                case "admin":
                    <span class="badge bg-danger me-2">Admin Users</span>
                    break;
                case "cafeowner":
                    <span class="badge bg-success me-2">Cafe Owners</span>
                    break;
                case "locked":
                    <span class="badge bg-warning text-dark me-2">Locked Users</span>
                    break;
                default:
                    <span class="badge bg-primary me-2">All Users</span>
                    break;
            }
            <small class="text-muted">(@Model.Count results)</small>
        </h5>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>User</th>
                            <th>Email</th>
                            <th>Roles</th>
                            <th>Reviews</th>
                            <th>Created</th>
                            <th>Last Login</th>
                            <th>Status</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            var roles = userRoles.GetValueOrDefault(user.Id, new List<string>());
                            var isLocked = user.LockoutEnd != null && user.LockoutEnd > DateTimeOffset.UtcNow;
                            <tr class="@(isLocked ? "table-warning" : "")">
                                <td>
                                    <div class="d-flex align-items-center">
                                        @if (!string.IsNullOrEmpty(user.AvatarUrl))
                                        {
                                            <img src="@user.AvatarUrl" class="rounded-circle me-2" style="width: 40px; height: 40px; object-fit: cover;">
                                        }
                                        else
                                        {
                                            <div class="rounded-circle me-2 d-flex align-items-center justify-content-center text-white"
                                                 style="width: 40px; height: 40px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); font-size: 14px;">
                                                @(user.FirstName?.FirstOrDefault())@(user.LastName?.FirstOrDefault())
                                            </div>
                                        }
                                        <div>
                                            <div class="fw-bold">@user.GetFullName()</div>
                                            @if (user.IsCafeOwner)
                                            {
                                                <small class="badge bg-success bg-opacity-10 text-success">
                                                    <i class="bi bi-shop"></i> Cafe Owner
                                                </small>
                                            }
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div>@user.Email</div>
                                    @if (user.EmailConfirmed)
                                    {
                                        <small class="text-success"><i class="bi bi-check-circle-fill"></i> Verified</small>
                                    }
                                    else
                                    {
                                        <small class="text-warning"><i class="bi bi-exclamation-circle"></i> Not verified</small>
                                    }
                                </td>
                                <td>
                                    @foreach (var role in roles)
                                    {
                                        var badgeClass = role == "Admin" ? "bg-danger" : (role == "CafeOwner" ? "bg-success" : "bg-secondary");
                                        <span class="badge @badgeClass me-1">@role</span>
                                    }
                                    @if (!roles.Any())
                                    {
                                        <span class="text-muted small">No roles</span>
                                    }
                                </td>
                                <td>
                                    <span class="badge bg-info">@user.TotalReviews</span>
                                </td>
                                <td>
                                    <small>@user.CreatedAt.ToString("MMM dd, yyyy")</small>
                                </td>
                                <td>
                                    @if (user.LastLoginAt.HasValue)
                                    {
                                        <small>@user.LastLoginAt.Value.ToString("MMM dd, yyyy")</small>
                                    }
                                    else
                                    {
                                        <small class="text-muted">Never</small>
                                    }
                                </td>
                                <td>
                                    @if (isLocked)
                                    {
                                        <span class="badge bg-warning text-dark">
                                            <i class="bi bi-lock-fill"></i> Locked
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle"></i> Active
                                        </span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm">
                                        <a href="@Url.Action("EditUser", new { id = user.Id })" class="btn btn-outline-primary" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <form asp-action="ToggleUserLockout" asp-route-id="@user.Id" method="post" class="d-inline">
                                            @if (isLocked)
                                            {
                                                <button type="submit" class="btn btn-outline-success" title="Unlock"
                                                        onclick="return confirm('Unlock this user?');">
                                                    <i class="bi bi-unlock"></i>
                                                </button>
                                            }
                                            else
                                            {
                                                <button type="submit" class="btn btn-outline-warning" title="Lock"
                                                        onclick="return confirm('Lock this user? They will not be able to login.');">
                                                    <i class="bi bi-lock"></i>
                                                </button>
                                            }
                                        </form>
                                        @if (!roles.Contains("Admin"))
                                        {
                                            <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post" class="d-inline">
                                                <button type="submit" class="btn btn-outline-danger" title="Delete"
                                                        onclick="return confirm('Are you sure you want to delete this user? This action cannot be undone.');">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            @if (totalPages > 1)
            {
                <nav aria-label="User list pagination" class="mt-4">
                    <ul class="pagination justify-content-center">
                        <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                            <a class="page-link" href="@Url.Action("Users", new { filter, search, page = currentPage - 1 })">
                                <i class="bi bi-chevron-left"></i>
                            </a>
                        </li>
                        @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(totalPages, currentPage + 2); i++)
                        {
                            <li class="page-item @(i == currentPage ? "active" : "")">
                                <a class="page-link" href="@Url.Action("Users", new { filter, search, page = i })">@i</a>
                            </li>
                        }
                        <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                            <a class="page-link" href="@Url.Action("Users", new { filter, search, page = currentPage + 1 })">
                                <i class="bi bi-chevron-right"></i>
                            </a>
                        </li>
                    </ul>
                </nav>
            }
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-people display-1 text-muted"></i>
                <p class="text-muted mt-3">No users found.</p>
            </div>
        }
    </div>
</div>
