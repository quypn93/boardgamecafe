@model List<BoardGameCafeFinder.Models.Domain.BlogPost>
@{
    ViewData["Title"] = "Blog Posts Management";
    Layout = "_AdminLayout";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0"><i class="bi bi-file-earmark-text me-2"></i>Blog Posts</h1>
            <p class="text-muted mb-0">Manage blog posts and auto-generate content</p>
        </div>
        <div>
            <a asp-action="CreateBlogPost" class="btn btn-primary">
                <i class="bi bi-plus-lg me-1"></i> New Post
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <!-- Auto-Generate Section -->
        <div class="col-lg-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-magic me-2"></i>Auto-Generate Posts</h5>
                </div>
                <div class="card-body">
                    <!-- Top Games Posts -->
                    <div class="mb-4">
                        <h6><i class="bi bi-trophy me-1"></i> Top Games by City</h6>
                        <p class="text-muted small">Generate posts showing popular board games in selected cities.</p>

                        <div class="mb-3">
                            <label class="form-label">Select Cities</label>
                            <div class="city-checkboxes border rounded p-2" style="max-height: 200px; overflow-y: auto;">
                                @foreach (var city in (IEnumerable<dynamic>)ViewBag.Cities)
                                {
                                    <div class="form-check">
                                        <input class="form-check-input city-checkbox" type="checkbox" value="@city.City" id="city_@city.City.Replace(" ", "_")">
                                        <label class="form-check-label" for="city_@city.City.Replace(" ", "_")">
                                            @city.City <span class="badge bg-secondary">@city.Count cafes</span>
                                        </label>
                                    </div>
                                }
                            </div>
                            <div class="mt-2">
                                <button type="button" class="btn btn-sm btn-outline-secondary" id="selectAllCities">Select All</button>
                                <button type="button" class="btn btn-sm btn-outline-secondary" id="deselectAllCities">Deselect All</button>
                            </div>
                        </div>

                        <button type="button" class="btn btn-success w-100" id="generateTopGamesBtn">
                            <i class="bi bi-lightning me-1"></i> Generate Top Games Posts
                        </button>
                    </div>

                    <hr>

                    <!-- City Guide Posts -->
                    <div>
                        <h6><i class="bi bi-map me-1"></i> City Guide</h6>
                        <p class="text-muted small">Generate a comprehensive guide for a specific city.</p>

                        <div class="mb-3">
                            <label class="form-label">Select City</label>
                            <select class="form-select" id="cityGuideSelect">
                                <option value="">-- Select City --</option>
                                @foreach (var city in (IEnumerable<dynamic>)ViewBag.Cities)
                                {
                                    <option value="@city.City">@city.City (@city.Count cafes)</option>
                                }
                            </select>
                        </div>

                        <button type="button" class="btn btn-info w-100" id="generateCityGuideBtn">
                            <i class="bi bi-book me-1"></i> Generate City Guide
                        </button>
                    </div>
                </div>
            </div>

            <!-- Stats Card -->
            <div class="card shadow-sm mt-4">
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-6">
                            <h3 class="mb-0">@Model.Count</h3>
                            <small class="text-muted">Total Posts</small>
                        </div>
                        <div class="col-6">
                            <h3 class="mb-0">@Model.Count(p => p.IsPublished)</h3>
                            <small class="text-muted">Published</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Posts List -->
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h5 class="mb-0">All Posts</h5>
                </div>
                <div class="card-body p-0">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Title</th>
                                        <th>Category</th>
                                        <th>Status</th>
                                        <th>Views</th>
                                        <th>Date</th>
                                        <th width="150">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var post in Model)
                                    {
                                        <tr>
                                            <td>
                                                <div>
                                                    <strong>@post.Title</strong>
                                                    @if (post.IsAutoGenerated)
                                                    {
                                                        <span class="badge bg-info ms-1">Auto</span>
                                                    }
                                                </div>
                                                @if (!string.IsNullOrEmpty(post.RelatedCity))
                                                {
                                                    <small class="text-muted"><i class="bi bi-geo-alt"></i> @post.RelatedCity</small>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(post.Category))
                                                {
                                                    <span class="badge bg-secondary">@post.Category</span>
                                                }
                                            </td>
                                            <td>
                                                @if (post.IsPublished)
                                                {
                                                    <span class="badge bg-success">Published</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning text-dark">Draft</span>
                                                }
                                            </td>
                                            <td>@post.ViewCount</td>
                                            <td>
                                                <small>@post.CreatedAt.ToString("MMM dd, yyyy")</small>
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    <a asp-action="EditBlogPost" asp-route-id="@post.Id" class="btn btn-outline-primary" title="Edit">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>
                                                    <form asp-action="ToggleBlogPostPublish" asp-route-id="@post.Id" method="post" class="d-inline">
                                                        <button type="submit" class="btn btn-outline-@(post.IsPublished ? "warning" : "success")" title="@(post.IsPublished ? "Unpublish" : "Publish")">
                                                            <i class="bi bi-@(post.IsPublished ? "eye-slash" : "eye")"></i>
                                                        </button>
                                                    </form>
                                                    @if (post.IsPublished)
                                                    {
                                                        <a href="/blog/@post.Slug" target="_blank" class="btn btn-outline-info" title="View">
                                                            <i class="bi bi-box-arrow-up-right"></i>
                                                        </a>
                                                    }
                                                    <form asp-action="DeleteBlogPost" asp-route-id="@post.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this post?');">
                                                        <button type="submit" class="btn btn-outline-danger" title="Delete">
                                                            <i class="bi bi-trash"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5 text-muted">
                            <i class="bi bi-file-earmark-text display-4"></i>
                            <p class="mt-2">No blog posts yet. Create your first post or use auto-generate!</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Select/Deselect all cities
        document.getElementById('selectAllCities').addEventListener('click', function() {
            document.querySelectorAll('.city-checkbox').forEach(cb => cb.checked = true);
        });

        document.getElementById('deselectAllCities').addEventListener('click', function() {
            document.querySelectorAll('.city-checkbox').forEach(cb => cb.checked = false);
        });

        // Generate Top Games Posts
        document.getElementById('generateTopGamesBtn').addEventListener('click', async function() {
            const btn = this;
            const selectedCities = Array.from(document.querySelectorAll('.city-checkbox:checked'))
                .map(cb => cb.value);

            if (selectedCities.length === 0) {
                alert('Please select at least one city.');
                return;
            }

            btn.disabled = true;
            btn.innerHTML = '<span class="spinner-border spinner-border-sm me-1"></span> Generating...';

            try {
                const response = await fetch('/Admin/GenerateTopGamesPosts', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                    },
                    body: JSON.stringify({ cities: selectedCities })
                });

                const result = await response.json();

                if (result.success) {
                    alert(result.message);
                    location.reload();
                } else {
                    alert('Error: ' + result.message);
                }
            } catch (error) {
                alert('An error occurred: ' + error.message);
            } finally {
                btn.disabled = false;
                btn.innerHTML = '<i class="bi bi-lightning me-1"></i> Generate Top Games Posts';
            }
        });

        // Generate City Guide
        document.getElementById('generateCityGuideBtn').addEventListener('click', async function() {
            const btn = this;
            const city = document.getElementById('cityGuideSelect').value;

            if (!city) {
                alert('Please select a city.');
                return;
            }

            btn.disabled = true;
            btn.innerHTML = '<span class="spinner-border spinner-border-sm me-1"></span> Generating...';

            try {
                const response = await fetch('/Admin/GenerateCityGuidePost', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                    },
                    body: JSON.stringify({ city: city })
                });

                const result = await response.json();

                if (result.success) {
                    alert(result.message);
                    location.reload();
                } else {
                    alert('Error: ' + result.message);
                }
            } catch (error) {
                alert('An error occurred: ' + error.message);
            } finally {
                btn.disabled = false;
                btn.innerHTML = '<i class="bi bi-book me-1"></i> Generate City Guide';
            }
        });
    </script>
}
