@{
    ViewData["Title"] = "Affiliate Statistics";
    Layout = "_AdminLayout";
    var topGames = ViewBag.TopGames as dynamic;
    var clicksByDay = ViewBag.ClicksByDay as dynamic;
}

<div class="mb-4">
    <a href="/Admin/ManageAffiliates" class="btn btn-outline-secondary btn-sm mb-2">
        <i class="bi bi-arrow-left me-1"></i> Back to Affiliate Management
    </a>
    <h2><i class="bi bi-graph-up me-2"></i>Affiliate Statistics</h2>
    <p class="text-muted">Track affiliate link performance</p>
</div>

<!-- Stats Cards -->
<div class="row mb-4">
    <div class="col-md-4">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-subtitle mb-1 opacity-75">Total Clicks</h6>
                        <h2 class="mb-0">@ViewBag.TotalClicks</h2>
                    </div>
                    <i class="bi bi-cursor display-4 opacity-50"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-success text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-subtitle mb-1 opacity-75">Today</h6>
                        <h2 class="mb-0">@ViewBag.ClicksToday</h2>
                    </div>
                    <i class="bi bi-calendar-day display-4 opacity-50"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-info text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-subtitle mb-1 opacity-75">This Month</h6>
                        <h2 class="mb-0">@ViewBag.ClicksThisMonth</h2>
                    </div>
                    <i class="bi bi-calendar-month display-4 opacity-50"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Top Games by Clicks -->
    <div class="col-lg-6 mb-4">
        <div class="card shadow-sm h-100">
            <div class="card-header bg-white">
                <h5 class="mb-0"><i class="bi bi-trophy me-2"></i>Top Games by Clicks</h5>
            </div>
            <div class="card-body p-0">
                @if (topGames != null && ((IEnumerable<dynamic>)topGames).Any())
                {
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>#</th>
                                <th>Game</th>
                                <th class="text-end">Clicks</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int rank = 1;
                            }
                            @foreach (var game in topGames)
                            {
                                <tr>
                                    <td>
                                        @if (rank <= 3)
                                        {
                                            <span class="badge @(rank == 1 ? "bg-warning" : rank == 2 ? "bg-secondary" : "bg-danger")">@rank</span>
                                        }
                                        else
                                        {
                                            @rank
                                        }
                                    </td>
                                    <td>@game.GameName</td>
                                    <td class="text-end"><span class="badge bg-success">@game.Clicks</span></td>
                                </tr>
                                rank++;
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="text-center py-5 text-muted">
                        <i class="bi bi-inbox display-4"></i>
                        <p class="mt-3">No click data yet.</p>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Clicks Over Time -->
    <div class="col-lg-6 mb-4">
        <div class="card shadow-sm h-100">
            <div class="card-header bg-white">
                <h5 class="mb-0"><i class="bi bi-bar-chart me-2"></i>Clicks (Last 30 Days)</h5>
            </div>
            <div class="card-body">
                @if (clicksByDay != null && ((IEnumerable<dynamic>)clicksByDay).Any())
                {
                    <div class="table-responsive" style="max-height: 400px; overflow-y: auto;">
                        <table class="table table-sm">
                            <thead class="table-light sticky-top">
                                <tr>
                                    <th>Date</th>
                                    <th class="text-end">Clicks</th>
                                    <th style="width: 50%;">Chart</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    var maxClicks = ((IEnumerable<dynamic>)clicksByDay).Max(x => (int)x.Clicks);
                                }
                                @foreach (var day in clicksByDay)
                                {
                                    var percentage = maxClicks > 0 ? ((int)day.Clicks * 100 / maxClicks) : 0;
                                    <tr>
                                        <td>@((DateTime)day.Date).ToString("MMM dd")</td>
                                        <td class="text-end">@day.Clicks</td>
                                        <td>
                                            <div class="progress" style="height: 20px;">
                                                <div class="progress-bar bg-primary" style="width: @percentage%"></div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-5 text-muted">
                        <i class="bi bi-bar-chart display-4"></i>
                        <p class="mt-3">No click data in the last 30 days.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="card shadow-sm">
    <div class="card-header bg-white">
        <h5 class="mb-0"><i class="bi bi-lightning me-2"></i>Quick Actions</h5>
    </div>
    <div class="card-body">
        <div class="d-flex gap-3 flex-wrap">
            <a href="/Admin/ManageAffiliates" class="btn btn-primary">
                <i class="bi bi-list-ul me-1"></i> Manage Affiliates
            </a>
            <a href="/Admin/ManageAffiliates?filter=without" class="btn btn-warning">
                <i class="bi bi-exclamation-triangle me-1"></i> Games Missing URLs
            </a>
            <a href="/Admin/ExportGamesWithoutAffiliate" class="btn btn-outline-secondary">
                <i class="bi bi-download me-1"></i> Export Missing
            </a>
        </div>
    </div>
</div>
