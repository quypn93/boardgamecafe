@model List<BoardGameCafeFinder.Models.Domain.Review>
@{
    ViewData["Title"] = "Review Management";
    Layout = "_AdminLayout";
    var filter = ViewBag.Filter as string ?? "pending";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-chat-square-text-fill me-2"></i>Review Management</h2>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Stats Cards -->
<div class="row mb-4">
    <div class="col-md-4">
        <div class="card shadow-sm border-0 @(filter == "pending" ? "border-warning border-2" : "")">
            <a href="@Url.Action("Reviews", new { filter = "pending" })" class="text-decoration-none">
                <div class="card-body text-center">
                    <h5 class="card-title text-warning"><i class="bi bi-clock-history me-1"></i> Pending</h5>
                    <div class="display-4 fw-bold text-warning">@ViewBag.PendingCount</div>
                </div>
            </a>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card shadow-sm border-0 @(filter == "approved" ? "border-success border-2" : "")">
            <a href="@Url.Action("Reviews", new { filter = "approved" })" class="text-decoration-none">
                <div class="card-body text-center">
                    <h5 class="card-title text-success"><i class="bi bi-check-circle me-1"></i> Approved</h5>
                    <div class="display-4 fw-bold text-success">@ViewBag.ApprovedCount</div>
                </div>
            </a>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card shadow-sm border-0 @(filter == "all" ? "border-primary border-2" : "")">
            <a href="@Url.Action("Reviews", new { filter = "all" })" class="text-decoration-none">
                <div class="card-body text-center">
                    <h5 class="card-title text-primary"><i class="bi bi-list-ul me-1"></i> All</h5>
                    <div class="display-4 fw-bold text-primary">@ViewBag.TotalCount</div>
                </div>
            </a>
        </div>
    </div>
</div>

<!-- Reviews Table -->
<div class="card shadow-sm border-0">
    <div class="card-header bg-white border-bottom-0 pt-3 d-flex justify-content-between align-items-center">
        <h5 class="mb-0">
            @if (filter == "pending")
            {
                <span class="badge bg-warning text-dark me-2">Pending Reviews</span>
            }
            else if (filter == "approved")
            {
                <span class="badge bg-success me-2">Approved Reviews</span>
            }
            else
            {
                <span class="badge bg-primary me-2">All Reviews</span>
            }
            <small class="text-muted">(@Model.Count results)</small>
        </h5>
        @if (filter == "pending" && Model.Any())
        {
            <form asp-action="BulkApproveReviews" method="post" id="bulkApproveForm">
                <button type="submit" class="btn btn-success btn-sm" id="bulkApproveBtn" disabled>
                    <i class="bi bi-check-all me-1"></i> Approve Selected (<span id="selectedCount">0</span>)
                </button>
            </form>
        }
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            @if (filter == "pending")
                            {
                                <th style="width: 40px;">
                                    <input type="checkbox" class="form-check-input" id="selectAll" title="Select all">
                                </th>
                            }
                            <th>Reviewer</th>
                            <th>Cafe</th>
                            <th>Rating</th>
                            <th>Content</th>
                            <th>Date</th>
                            <th>Status</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var review in Model)
                        {
                            <tr>
                                @if (filter == "pending")
                                {
                                    <td>
                                        <input type="checkbox" class="form-check-input review-checkbox"
                                               name="reviewIds" value="@review.ReviewId" form="bulkApproveForm">
                                    </td>
                                }
                                <td>
                                    @if (review.User != null)
                                    {
                                        <div class="fw-bold">@review.User.GetFullName()</div>
                                        <small class="text-muted">@review.User.Email</small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Anonymous / Crawled</span>
                                    }
                                </td>
                                <td>
                                    <a href="/cafe/@review.Cafe?.Slug" target="_blank" class="text-decoration-none">
                                        @(review.Cafe?.Name ?? "Unknown")
                                    </a>
                                    <br>
                                    <small class="text-muted">@review.Cafe?.City</small>
                                </td>
                                <td>
                                    <span class="badge bg-warning text-dark">
                                        @review.Rating <i class="bi bi-star-fill"></i>
                                    </span>
                                </td>
                                <td style="max-width: 300px;">
                                    @if (!string.IsNullOrEmpty(review.Title))
                                    {
                                        <div class="fw-bold small">@review.Title</div>
                                    }
                                    <div class="small text-truncate" title="@review.Content">
                                        @(review.Content?.Length > 100 ? review.Content.Substring(0, 100) + "..." : review.Content)
                                    </div>
                                </td>
                                <td>
                                    <small>@review.CreatedAt.ToString("MMM dd, yyyy")</small>
                                    <br>
                                    <small class="text-muted">@review.CreatedAt.ToString("HH:mm")</small>
                                </td>
                                <td>
                                    @if (review.IsApproved)
                                    {
                                        <span class="badge bg-success">Approved</span>
                                        @if (review.ApprovedAt.HasValue)
                                        {
                                            <br><small class="text-muted">@review.ApprovedAt.Value.ToString("MMM dd")</small>
                                        }
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark">Pending</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm">
                                        @if (!review.IsApproved)
                                        {
                                            <form asp-action="ApproveReview" asp-route-id="@review.ReviewId" method="post" class="d-inline">
                                                <button type="submit" class="btn btn-outline-success" title="Approve">
                                                    <i class="bi bi-check-lg"></i>
                                                </button>
                                            </form>
                                        }
                                        <form asp-action="RejectReview" asp-route-id="@review.ReviewId" method="post" class="d-inline"
                                              onsubmit="return confirm('Are you sure you want to delete this review?');">
                                            <button type="submit" class="btn btn-outline-danger" title="Reject & Delete">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-inbox display-1 text-muted"></i>
                <p class="text-muted mt-3">
                    @if (filter == "pending")
                    {
                        <span>No pending reviews. All caught up!</span>
                    }
                    else
                    {
                        <span>No reviews found.</span>
                    }
                </p>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const selectAll = document.getElementById('selectAll');
            const checkboxes = document.querySelectorAll('.review-checkbox');
            const bulkApproveBtn = document.getElementById('bulkApproveBtn');
            const selectedCountSpan = document.getElementById('selectedCount');

            function updateSelectedCount() {
                const checkedCount = document.querySelectorAll('.review-checkbox:checked').length;
                if (selectedCountSpan) selectedCountSpan.textContent = checkedCount;
                if (bulkApproveBtn) bulkApproveBtn.disabled = checkedCount === 0;
            }

            if (selectAll) {
                selectAll.addEventListener('change', function() {
                    checkboxes.forEach(cb => cb.checked = this.checked);
                    updateSelectedCount();
                });
            }

            checkboxes.forEach(cb => {
                cb.addEventListener('change', function() {
                    updateSelectedCount();
                    // Update selectAll state
                    if (selectAll) {
                        selectAll.checked = document.querySelectorAll('.review-checkbox:checked').length === checkboxes.length;
                    }
                });
            });
        });
    </script>
}
