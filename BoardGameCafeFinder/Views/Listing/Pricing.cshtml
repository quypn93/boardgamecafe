@{
    ViewData["Title"] = "Premium Listing Plans";
    Layout = "_UserLayout";

    var plans = ViewBag.Plans as Dictionary<string, BoardGameCafeFinder.Controllers.ListingPlan>;
}

<!-- Hero Section -->
<div class="bg-gradient-primary text-white py-5">
    <div class="container text-center">
        <h1 class="display-5 fw-bold mb-3">
            <i class="bi bi-star-fill me-2"></i>Premium Listing Plans
        </h1>
        <p class="lead opacity-90 mb-0">
            Boost your board game cafe's visibility and attract more customers
        </p>
    </div>
</div>

<div class="container py-5">
    <!-- Plans Section -->
    <div class="row justify-content-center mb-5">
        @if (plans != null)
        {
            @foreach (var plan in plans)
            {
                var isPremium = plan.Key == "Premium";
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100 shadow @(isPremium ? "border-primary border-2" : "")">
                        @if (isPremium)
                        {
                            <div class="card-header bg-primary text-white text-center py-2">
                                <i class="bi bi-star-fill me-1"></i> Most Popular
                            </div>
                        }
                        <div class="card-body text-center p-4">
                            <h3 class="card-title mb-3">@plan.Key</h3>
                            <div class="mb-4">
                                <span class="display-4 fw-bold text-primary">$@plan.Value.MonthlyPrice</span>
                                <span class="text-muted">/month</span>
                            </div>

                            <ul class="list-unstyled text-start mb-4">
                                @foreach (var feature in plan.Value.Features)
                                {
                                    <li class="mb-2">
                                        <i class="bi bi-check-circle-fill text-success me-2"></i>
                                        @feature
                                    </li>
                                }
                            </ul>
                        </div>
                        <div class="card-footer bg-white border-0 pb-4 text-center">
                            <a href="/Listing/Claim/0?plan=@plan.Key" class="btn @(isPremium ? "btn-primary" : "btn-outline-primary") btn-lg w-100">
                                Get Started
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
    </div>

    <!-- Features Comparison -->
    <div class="card shadow-sm mb-5">
        <div class="card-header bg-white">
            <h4 class="mb-0"><i class="bi bi-table me-2"></i>Feature Comparison</h4>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Feature</th>
                            <th class="text-center">Basic</th>
                            <th class="text-center bg-primary bg-opacity-10">Premium</th>
                            <th class="text-center">Featured</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Basic Listing</td>
                            <td class="text-center"><i class="bi bi-check-lg text-success fs-5"></i></td>
                            <td class="text-center bg-primary bg-opacity-10"><i class="bi bi-check-lg text-success fs-5"></i></td>
                            <td class="text-center"><i class="bi bi-check-lg text-success fs-5"></i></td>
                        </tr>
                        <tr>
                            <td>Contact Information</td>
                            <td class="text-center"><i class="bi bi-check-lg text-success fs-5"></i></td>
                            <td class="text-center bg-primary bg-opacity-10"><i class="bi bi-check-lg text-success fs-5"></i></td>
                            <td class="text-center"><i class="bi bi-check-lg text-success fs-5"></i></td>
                        </tr>
                        <tr>
                            <td>Business Hours</td>
                            <td class="text-center"><i class="bi bi-check-lg text-success fs-5"></i></td>
                            <td class="text-center bg-primary bg-opacity-10"><i class="bi bi-check-lg text-success fs-5"></i></td>
                            <td class="text-center"><i class="bi bi-check-lg text-success fs-5"></i></td>
                        </tr>
                        <tr>
                            <td>Location on Map</td>
                            <td class="text-center"><i class="bi bi-check-lg text-success fs-5"></i></td>
                            <td class="text-center bg-primary bg-opacity-10"><i class="bi bi-check-lg text-success fs-5"></i></td>
                            <td class="text-center"><i class="bi bi-check-lg text-success fs-5"></i></td>
                        </tr>
                        <tr>
                            <td>Photo Gallery</td>
                            <td class="text-center"><i class="bi bi-x-lg text-muted fs-5"></i></td>
                            <td class="text-center bg-primary bg-opacity-10"><i class="bi bi-check-lg text-success fs-5"></i> Up to 10</td>
                            <td class="text-center"><i class="bi bi-check-lg text-success fs-5"></i> Unlimited</td>
                        </tr>
                        <tr>
                            <td>Event Listings</td>
                            <td class="text-center"><i class="bi bi-x-lg text-muted fs-5"></i></td>
                            <td class="text-center bg-primary bg-opacity-10"><i class="bi bi-check-lg text-success fs-5"></i></td>
                            <td class="text-center"><i class="bi bi-check-lg text-success fs-5"></i></td>
                        </tr>
                        <tr>
                            <td>Priority in Search</td>
                            <td class="text-center"><i class="bi bi-x-lg text-muted fs-5"></i></td>
                            <td class="text-center bg-primary bg-opacity-10"><i class="bi bi-check-lg text-success fs-5"></i></td>
                            <td class="text-center"><i class="bi bi-check-lg text-success fs-5"></i></td>
                        </tr>
                        <tr>
                            <td>Featured on Homepage</td>
                            <td class="text-center"><i class="bi bi-x-lg text-muted fs-5"></i></td>
                            <td class="text-center bg-primary bg-opacity-10"><i class="bi bi-x-lg text-muted fs-5"></i></td>
                            <td class="text-center"><i class="bi bi-check-lg text-success fs-5"></i></td>
                        </tr>
                        <tr>
                            <td>Game Inventory Manager</td>
                            <td class="text-center"><i class="bi bi-x-lg text-muted fs-5"></i></td>
                            <td class="text-center bg-primary bg-opacity-10"><i class="bi bi-x-lg text-muted fs-5"></i></td>
                            <td class="text-center"><i class="bi bi-check-lg text-success fs-5"></i></td>
                        </tr>
                        <tr>
                            <td>Analytics Dashboard</td>
                            <td class="text-center"><i class="bi bi-x-lg text-muted fs-5"></i></td>
                            <td class="text-center bg-primary bg-opacity-10"><i class="bi bi-x-lg text-muted fs-5"></i></td>
                            <td class="text-center"><i class="bi bi-check-lg text-success fs-5"></i></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- FAQ Section -->
    <div class="mb-5">
        <h3 class="text-center mb-4"><i class="bi bi-question-circle me-2"></i>Frequently Asked Questions</h3>
        <div class="accordion" id="faqAccordion">
            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#faq1">
                        How do I claim my cafe?
                    </button>
                </h2>
                <div id="faq1" class="accordion-collapse collapse show" data-bs-parent="#faqAccordion">
                    <div class="accordion-body">
                        Search for your cafe on our platform, then click "Claim This Business" on your cafe's page. You'll need to verify ownership before your premium features are activated.
                    </div>
                </div>
            </div>
            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq2">
                        Can I change my plan later?
                    </button>
                </h2>
                <div id="faq2" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                    <div class="accordion-body">
                        Yes! You can upgrade or downgrade your plan at any time. When upgrading, you'll get immediate access to new features. When downgrading, changes take effect at the end of your current billing period.
                    </div>
                </div>
            </div>
            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq3">
                        What payment methods do you accept?
                    </button>
                </h2>
                <div id="faq3" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                    <div class="accordion-body">
                        We accept all major credit cards (Visa, Mastercard, American Express) and PayPal. All payments are processed securely.
                    </div>
                </div>
            </div>
            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq4">
                        Is there a contract or commitment?
                    </button>
                </h2>
                <div id="faq4" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                    <div class="accordion-body">
                        No long-term contracts! All plans are month-to-month and you can cancel at any time. Your listing will remain active until the end of your paid period.
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- CTA Section -->
    <div class="text-center py-4 bg-light rounded">
        <h4>Ready to grow your business?</h4>
        <p class="text-muted mb-3">Join hundreds of board game cafes already using our platform</p>
        <a href="/" class="btn btn-primary btn-lg">
            <i class="bi bi-search me-2"></i>Find Your Cafe
        </a>
    </div>
</div>

<style>
    .bg-gradient-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }
</style>
