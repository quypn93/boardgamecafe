@{
    ViewData["Title"] = "Cafe Submitted Successfully";
    Layout = "_UserLayout";

    var cafe = ViewBag.Cafe as BoardGameCafeFinder.Models.Domain.Cafe;
    var plans = ViewBag.Plans as Dictionary<string, BoardGameCafeFinder.Controllers.ListingPlan>;
}

<!-- Hero Section -->
<div class="bg-success text-white py-5">
    <div class="container text-center">
        <div class="mb-4">
            <i class="bi bi-check-circle-fill display-1"></i>
        </div>
        <h1 class="display-5 fw-bold mb-3">Cafe Submitted Successfully!</h1>
        <p class="lead opacity-90 mb-0">
            Thank you for adding your cafe to Board Game Cafe Finder
        </p>
    </div>
</div>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            @if (cafe != null)
            {
                <!-- Cafe Details -->
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-white">
                        <h5 class="mb-0"><i class="bi bi-shop me-2"></i>Your Cafe</h5>
                    </div>
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col-md-8">
                                <h4 class="mb-2">@cafe.Name</h4>
                                <p class="text-muted mb-2">
                                    <i class="bi bi-geo-alt me-1"></i>
                                    @cafe.Address, @cafe.City@(string.IsNullOrEmpty(cafe.State) ? "" : $", {cafe.State}")
                                </p>
                                @if (!string.IsNullOrEmpty(cafe.Phone))
                                {
                                    <p class="text-muted mb-0">
                                        <i class="bi bi-telephone me-1"></i>@cafe.Phone
                                    </p>
                                }
                            </div>
                            <div class="col-md-4 text-md-end">
                                <span class="badge bg-warning text-dark fs-6">
                                    <i class="bi bi-hourglass-split me-1"></i>Pending Review
                                </span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- What's Next -->
                <div class="card shadow-sm mb-4 border-primary">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>What Happens Next?</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-4">
                            <div class="col-md-4 text-center">
                                <div class="rounded-circle bg-primary bg-opacity-10 d-inline-flex align-items-center justify-content-center mb-3"
                                     style="width: 60px; height: 60px;">
                                    <span class="text-primary fw-bold fs-4">1</span>
                                </div>
                                <h6>Review</h6>
                                <p class="small text-muted mb-0">Our team will review your submission within 24-48 hours</p>
                            </div>
                            <div class="col-md-4 text-center">
                                <div class="rounded-circle bg-success bg-opacity-10 d-inline-flex align-items-center justify-content-center mb-3"
                                     style="width: 60px; height: 60px;">
                                    <span class="text-success fw-bold fs-4">2</span>
                                </div>
                                <h6>Approval</h6>
                                <p class="small text-muted mb-0">You'll receive an email once your cafe is approved</p>
                            </div>
                            <div class="col-md-4 text-center">
                                <div class="rounded-circle bg-warning bg-opacity-10 d-inline-flex align-items-center justify-content-center mb-3"
                                     style="width: 60px; height: 60px;">
                                    <span class="text-warning fw-bold fs-4">3</span>
                                </div>
                                <h6>Go Live</h6>
                                <p class="small text-muted mb-0">Your cafe will be visible to customers searching our directory</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Upgrade CTA -->
                <div class="card shadow-sm mb-4 bg-light">
                    <div class="card-body text-center py-4">
                        <i class="bi bi-star-fill text-warning display-4 mb-3"></i>
                        <h4>Want More Visibility?</h4>
                        <p class="text-muted mb-4">
                            Upgrade to a premium listing and get up to 5x more views, featured placement, photo galleries, and more!
                        </p>
                        <a href="/Listing/Claim/@cafe.CafeId?plan=Premium" class="btn btn-primary btn-lg">
                            <i class="bi bi-rocket-takeoff me-2"></i>Upgrade to Premium
                        </a>
                        <p class="mt-3 mb-0 small text-muted">
                            You can upgrade anytime after your cafe is approved
                        </p>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle me-2"></i>
                    Your cafe has been submitted. Check your email for confirmation and next steps.
                </div>
            }

            <!-- Actions -->
            <div class="d-flex justify-content-center gap-3">
                <a href="/Listing/SubmitCafe" class="btn btn-outline-primary">
                    <i class="bi bi-plus-circle me-2"></i>Add Another Cafe
                </a>
                <a href="/" class="btn btn-primary">
                    <i class="bi bi-house me-2"></i>Back to Home
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-success {
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%) !important;
    }
</style>
