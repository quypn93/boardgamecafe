@model BoardGameCafeFinder.Models.Domain.PremiumListing
@{
    ViewData["Title"] = $"Edit Listing - {Model.Cafe?.Name}";
    Layout = "_AdminLayout";

    var plans = ViewBag.Plans as Dictionary<string, BoardGameCafeFinder.Controllers.ListingPlan>;
    var isExpired = Model.EndDate <= DateTime.UtcNow;
}

<div class="container-fluid mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2><i class="bi bi-pencil"></i> Edit Listing</h2>
                    <p class="text-muted mb-0">@Model.Cafe?.Name</p>
                </div>
                <a href="/Listing/Admin" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Back
                </a>
            </div>

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show">
                    <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Status Alert -->
            @if (isExpired)
            {
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle"></i>
                    <strong>Expired!</strong> This listing expired on @Model.EndDate.ToString("MMMM dd, yyyy").
                    Extend the end date to reactivate.
                </div>
            }
            else if (!Model.IsActive)
            {
                <div class="alert alert-secondary">
                    <i class="bi bi-pause-circle"></i>
                    <strong>Inactive</strong> - This listing is currently disabled.
                </div>
            }

            <form method="post" action="/Listing/Edit/@Model.ListingId">
                <!-- Cafe Info (Read-only) -->
                <div class="card mb-4">
                    <div class="card-header bg-secondary text-white">
                        <h5 class="mb-0"><i class="bi bi-shop"></i> Cafe Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <p class="mb-1"><strong>Name:</strong> @Model.Cafe?.Name</p>
                                <p class="mb-1"><strong>Location:</strong> @Model.Cafe?.City, @Model.Cafe?.Country</p>
                            </div>
                            <div class="col-md-6">
                                <p class="mb-1"><strong>Created:</strong> @Model.CreatedAt.ToString("MMMM dd, yyyy")</p>
                                <p class="mb-0"><strong>Days Remaining:</strong>
                                    @if (isExpired)
                                    {
                                        <span class="text-danger">Expired</span>
                                    }
                                    else
                                    {
                                        <span class="text-success">@Model.GetDaysRemaining() days</span>
                                    }
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Select Plan -->
                <div class="card mb-4">
                    <div class="card-header bg-warning text-dark">
                        <h5 class="mb-0"><i class="bi bi-star"></i> Plan</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            @if (plans != null)
                            {
                                @foreach (var plan in plans)
                                {
                                    var isSelected = Model.PlanType == plan.Key;
                                    <div class="col-md-4 mb-3">
                                        <div class="card h-100 @(isSelected ? "border-primary border-2" : "")">
                                            <div class="card-body text-center">
                                                <h5 class="card-title">@plan.Key</h5>
                                                <h3 class="text-primary mb-3">$@plan.Value.MonthlyPrice<small class="text-muted">/mo</small></h3>
                                                <div class="form-check d-flex justify-content-center mb-3">
                                                    <input class="form-check-input me-2" type="radio" name="PlanType" id="plan@(plan.Key)"
                                                           value="@plan.Key" @(isSelected ? "checked" : "") required>
                                                    <label class="form-check-label" for="plan@(plan.Key)">Select</label>
                                                </div>
                                                <ul class="list-unstyled text-start small">
                                                    @foreach (var feature in plan.Value.Features)
                                                    {
                                                        <li class="mb-1"><i class="bi bi-check text-success"></i> @feature</li>
                                                    }
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                </div>

                <!-- Duration -->
                <div class="card mb-4">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0"><i class="bi bi-calendar"></i> Duration</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Start Date <span class="text-danger">*</span></label>
                                <input type="date" class="form-control" name="StartDate" value="@Model.StartDate.ToString("yyyy-MM-dd")" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">End Date <span class="text-danger">*</span></label>
                                <input type="date" class="form-control" name="EndDate" id="endDate" value="@Model.EndDate.ToString("yyyy-MM-dd")" required>
                            </div>
                        </div>
                        <div class="d-flex gap-2 mb-3">
                            <span class="text-muted">Quick extend:</span>
                            <button type="button" class="btn btn-outline-success btn-sm extend-btn" data-months="1">+1 Month</button>
                            <button type="button" class="btn btn-outline-success btn-sm extend-btn" data-months="3">+3 Months</button>
                            <button type="button" class="btn btn-outline-success btn-sm extend-btn" data-months="6">+6 Months</button>
                            <button type="button" class="btn btn-outline-success btn-sm extend-btn" data-months="12">+1 Year</button>
                        </div>
                    </div>
                </div>

                <!-- Status -->
                <div class="card mb-4">
                    <div class="card-header bg-dark text-white">
                        <h5 class="mb-0"><i class="bi bi-toggle-on"></i> Status</h5>
                    </div>
                    <div class="card-body">
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" name="IsActive" id="isActive" value="true" @(Model.IsActive ? "checked" : "")>
                            <label class="form-check-label" for="isActive">Active</label>
                        </div>
                        <small class="text-muted">Inactive listings won't provide premium features to the cafe</small>
                    </div>
                </div>

                <!-- Submit -->
                <div class="d-flex justify-content-between">
                    <div>
                        <a href="/Listing/Admin" class="btn btn-outline-secondary">
                            <i class="bi bi-x"></i> Cancel
                        </a>
                        <button type="button" class="btn btn-outline-danger ms-2" id="deleteBtn">
                            <i class="bi bi-trash"></i> Delete
                        </button>
                    </div>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle"></i> Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
<script>
    $(document).ready(function() {
        // Extend buttons - add months to current end date
        $('.extend-btn').on('click', function() {
            const months = $(this).data('months');
            const currentEndDate = new Date($('#endDate').val());
            const now = new Date();
            const baseDate = currentEndDate > now ? currentEndDate : now;
            const newEndDate = new Date(baseDate);
            newEndDate.setMonth(newEndDate.getMonth() + months);
            $('#endDate').val(newEndDate.toISOString().split('T')[0]);
        });

        // Delete button
        $('#deleteBtn').on('click', function() {
            if (!confirm('Are you sure you want to delete this listing?\n\nThis will remove all premium features from the cafe.\n\nThis action cannot be undone!')) {
                return;
            }

            const btn = $(this);
            btn.prop('disabled', true).html('<span class="spinner-border spinner-border-sm"></span> Deleting...');

            $.ajax({
                url: '/Listing/Delete/@Model.ListingId',
                method: 'POST',
                success: function(response) {
                    if (response.success) {
                        window.location.href = '/Listing/Admin';
                    } else {
                        alert('Error: ' + response.message);
                        btn.prop('disabled', false).html('<i class="bi bi-trash"></i> Delete');
                    }
                },
                error: function() {
                    alert('An error occurred while deleting.');
                    btn.prop('disabled', false).html('<i class="bi bi-trash"></i> Delete');
                }
            });
        });
    });
</script>
}
