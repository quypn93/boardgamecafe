@model List<BoardGameCafeFinder.Models.Domain.Invoice>
@{
    ViewData["Title"] = "Invoices";
    Layout = "_AdminLayout";

    var selectedStatus = ViewBag.SelectedStatus as string;
    var currentPage = (int)(ViewBag.CurrentPage ?? 1);
    var totalPages = (int)(ViewBag.TotalPages ?? 1);
    var totalItems = (int)(ViewBag.TotalItems ?? 0);
    var totalRevenue = (decimal)(ViewBag.TotalRevenue ?? 0);
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="bi bi-receipt text-success"></i> Invoices</h2>
            <p class="text-muted mb-0">View all invoices and payment history</p>
        </div>
        <div class="d-flex gap-2">
            <a href="/Listing/Admin" class="btn btn-outline-primary">
                <i class="bi bi-star-fill"></i> Listings
            </a>
            <a href="/Listing/Claims" class="btn btn-outline-info">
                <i class="bi bi-shield-check"></i> Claims
            </a>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row mb-4">
        @{
            var paidCount = Model.Count(i => i.PaymentStatus == "paid");
            var pendingCount = Model.Count(i => i.PaymentStatus == "pending");
            var totalThisMonth = Model.Where(i => i.PaymentStatus == "paid" && i.PaidAt.HasValue && i.PaidAt.Value.Month == DateTime.Now.Month && i.PaidAt.Value.Year == DateTime.Now.Year).Sum(i => i.TotalAmount);
        }
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="text-white-50">Total Revenue</h6>
                            <h2 class="mb-0">$@totalRevenue.ToString("N2")</h2>
                        </div>
                        <i class="bi bi-currency-dollar display-4 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="text-white-50">This Month</h6>
                            <h2 class="mb-0">$@totalThisMonth.ToString("N2")</h2>
                        </div>
                        <i class="bi bi-calendar-month display-4 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="text-white-50">Paid Invoices</h6>
                            <h2 class="mb-0">@paidCount</h2>
                        </div>
                        <i class="bi bi-check-circle display-4 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="text-dark opacity-75">Pending</h6>
                            <h2 class="mb-0">@pendingCount</h2>
                        </div>
                        <i class="bi bi-hourglass-split display-4 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form method="get" class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label class="form-label fw-bold">Status</label>
                    <select class="form-select" name="status" onchange="this.form.submit()">
                        <option value="">All Status</option>
                        <option value="paid" selected="@(selectedStatus == "paid")">Paid</option>
                        <option value="pending" selected="@(selectedStatus == "pending")">Pending</option>
                        <option value="refunded" selected="@(selectedStatus == "refunded")">Refunded</option>
                    </select>
                </div>
                <div class="col-md-4">
                    @if (!string.IsNullOrEmpty(selectedStatus))
                    {
                        <a href="/Listing/Invoices" class="btn btn-outline-secondary">
                            <i class="bi bi-x"></i> Clear Filters
                        </a>
                    }
                </div>
            </form>
        </div>
    </div>

    <!-- Invoices Table -->
    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Invoice #</th>
                            <th>Cafe</th>
                            <th>Description</th>
                            <th>Billing</th>
                            <th>Amount</th>
                            <th>Status</th>
                            <th>Date</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var invoice in Model)
                            {
                                var statusClass = invoice.PaymentStatus switch
                                {
                                    "paid" => "bg-success",
                                    "pending" => "bg-warning text-dark",
                                    "refunded" => "bg-info",
                                    _ => "bg-secondary"
                                };

                                <tr>
                                    <td>
                                        <a href="/Listing/Invoice/@invoice.InvoiceId" class="fw-bold text-decoration-none">
                                            @invoice.InvoiceNumber
                                        </a>
                                    </td>
                                    <td>
                                        <div>
                                            <a href="/cafe/@invoice.Cafe?.Slug" class="text-decoration-none">
                                                @invoice.Cafe?.Name
                                            </a>
                                            <div class="text-muted small">@invoice.Cafe?.City</div>
                                        </div>
                                    </td>
                                    <td>
                                        <div>
                                            @{
                                                var planClass = invoice.PlanType switch
                                                {
                                                    "Featured" => "bg-warning text-dark",
                                                    "Premium" => "bg-primary",
                                                    _ => "bg-secondary"
                                                };
                                            }
                                            <span class="badge @planClass">@invoice.PlanType</span>
                                            <div class="text-muted small">@invoice.PeriodMonths mo</div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="small">
                                            <div class="fw-bold">@invoice.BillingName</div>
                                            <div class="text-muted">@invoice.BillingEmail</div>
                                        </div>
                                    </td>
                                    <td>
                                        <div>
                                            <span class="fw-bold text-success fs-5">$@invoice.TotalAmount.ToString("N2")</span>
                                            @if (invoice.DiscountAmount > 0)
                                            {
                                                <div class="text-muted small">
                                                    <s>$@invoice.Subtotal.ToString("N2")</s>
                                                    <span class="text-success">-$@invoice.DiscountAmount.ToString("N2")</span>
                                                </div>
                                            }
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge @statusClass">@invoice.PaymentStatus</span>
                                        @if (invoice.PaidAt.HasValue)
                                        {
                                            <div class="text-muted small">@invoice.PaidAt.Value.ToString("MMM dd")</div>
                                        }
                                    </td>
                                    <td>
                                        <div class="small">
                                            <div>@invoice.CreatedAt.ToString("MMM dd, yyyy")</div>
                                            <div class="text-muted">
                                                @invoice.PeriodStart.ToString("MMM dd") - @invoice.PeriodEnd.ToString("MMM dd")
                                            </div>
                                        </div>
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group btn-group-sm">
                                            <a href="/Listing/Invoice/@invoice.InvoiceId" class="btn btn-outline-primary" title="View Invoice">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a href="/Listing/Invoice/@invoice.InvoiceId" target="_blank" class="btn btn-outline-secondary" title="Print Invoice">
                                                <i class="bi bi-printer"></i>
                                            </a>
                                            @if (!string.IsNullOrEmpty(invoice.StripePaymentIntentId))
                                            {
                                                <a href="https://dashboard.stripe.com/payments/@invoice.StripePaymentIntentId"
                                                   target="_blank" class="btn btn-outline-info" title="View in Stripe">
                                                    <i class="bi bi-stripe"></i>
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center py-5 text-muted">
                                    <i class="bi bi-inbox display-4"></i>
                                    <p class="mt-2">No invoices found</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Pagination -->
    @if (totalPages > 1)
    {
        <nav class="mt-4">
            <ul class="pagination justify-content-center">
                <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                    <a class="page-link" href="/Listing/Invoices?page=@(currentPage - 1)&status=@selectedStatus">
                        <i class="bi bi-chevron-left"></i>
                    </a>
                </li>
                @for (int i = 1; i <= totalPages; i++)
                {
                    <li class="page-item @(i == currentPage ? "active" : "")">
                        <a class="page-link" href="/Listing/Invoices?page=@i&status=@selectedStatus">@i</a>
                    </li>
                }
                <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                    <a class="page-link" href="/Listing/Invoices?page=@(currentPage + 1)&status=@selectedStatus">
                        <i class="bi bi-chevron-right"></i>
                    </a>
                </li>
            </ul>
            <p class="text-center text-muted">Showing @((currentPage - 1) * 20 + 1) - @Math.Min(currentPage * 20, totalItems) of @totalItems</p>
        </nav>
    }
</div>
