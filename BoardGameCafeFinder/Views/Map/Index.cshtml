@model BoardGameCafeFinder.Models.DTOs.MapViewModel
@{
    ViewData["Title"] = "Find Board Game Cafés Near You";
    Layout = "_UserLayout";
}

<div class="map-container">
    <div class="row g-0">
        <!-- Sidebar with Search & Filters -->
        <div class="col-lg-4 col-md-5 sidebar-panel">
            <div class="search-panel p-3">
                <h4 class="mb-3"><i class="bi bi-map"></i> Find Board Game Cafés</h4>

                <!-- Location Search -->
                <div class="mb-3">
                    <label for="locationInput" class="form-label">Location</label>
                    <div class="input-group">
                        <input type="text"
                               id="locationInput"
                               class="form-control"
                               placeholder="Enter city or address">
                        <button class="btn btn-outline-secondary" type="button" id="searchLocationBtn">
                            <i class="bi bi-search"></i>
                        </button>
                    </div>
                    <small class="text-muted">Or click "Use My Location" below</small>
                </div>

                <!-- Search Radius -->
                <div class="mb-3">
                    <label for="radiusSelect" class="form-label">Search Radius</label>
                    <select id="radiusSelect" class="form-select">
                        <option value="5000">5 km</option>
                        <option value="10000" selected>10 km</option>
                        <option value="25000">25 km</option>
                        <option value="50000">50 km</option>
                    </select>
                </div>

                <!-- Filters -->
                <div class="mb-3">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="openNowFilter">
                        <label class="form-check-label" for="openNowFilter">
                            Open Now
                        </label>
                    </div>
                </div>

                <div class="mb-3">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="hasGamesFilter">
                        <label class="form-check-label" for="hasGamesFilter">
                            Has Game Library
                        </label>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="minRatingSelect" class="form-label">Minimum Rating</label>
                    <select id="minRatingSelect" class="form-select">
                        <option value="">Any Rating</option>
                        <option value="4.5">4.5+</option>
                        <option value="4.0">4.0+</option>
                        <option value="3.5">3.5+</option>
                        <option value="3.0">3.0+</option>
                    </select>
                </div>

                <button id="searchBtn" class="btn btn-primary w-100 mb-2">
                    <i class="bi bi-search"></i> Search Cafés
                </button>

                <button id="useLocationBtn" class="btn btn-outline-secondary w-100">
                    <i class="bi bi-geo-alt"></i> Use My Location
                </button>
            </div>

            <!-- Results List -->
            <div id="resultsContainer" class="results-list">
                <div class="text-center p-4 text-muted">
                    <i class="bi bi-geo-alt" style="font-size: 2rem;"></i>
                    <p class="mt-2">Search for cafés or use your location to see results</p>
                </div>
            </div>
        </div>

        <!-- Leaflet Map -->
        <div class="col-lg-8 col-md-7 map-panel">
            <div id="map" style="height: 100vh;"></div>

            <!-- Loading Overlay -->
            <div id="loadingOverlay" class="loading-overlay" style="display: none;">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <!-- Leaflet CSS -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
          integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY="
          crossorigin="" />
    <style>
        .map-container {
            margin-top: -20px;
            padding: 2rem 0;
        }

        .sidebar-panel {
            height: 100vh;
            overflow-y: auto;
            background: #f8f9fa;
            border-right: 1px solid #dee2e6;
        }

        .search-panel {
            background: white;
            border-bottom: 1px solid #dee2e6;
        }

        .results-list {
            background: white;
        }

        .result-item {
            padding: 1rem;
            border-bottom: 1px solid #dee2e6;
            cursor: pointer;
            transition: background-color 0.2s;
        }

        .result-item:hover {
            background-color: #f8f9fa;
        }

        .result-item.active {
            background-color: #e7f3ff;
            border-left: 3px solid #0d6efd;
        }

        .result-item h6 {
            margin-bottom: 0.5rem;
            color: #212529;
        }

        .result-item .text-muted {
            font-size: 0.875rem;
        }

        .result-item .badge {
            font-size: 0.75rem;
        }

        .map-panel {
            position: relative;
        }

        .loading-overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(255, 255, 255, 0.8);
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 1000;
        }

        /* Leaflet popup styling */
        .leaflet-popup-content-wrapper {
            border-radius: 8px;
        }

        .leaflet-popup-content {
            margin: 12px;
        }

        .cafe-popup h5 {
            margin-bottom: 0.5rem;
            color: #333;
        }

        .cafe-popup .badge {
            font-size: 0.75rem;
        }

        /* Responsive adjustments */
        @@media (max-width: 768px) {
            .sidebar-panel {
                height: auto;
                max-height: 50vh;
            }

            .map-panel {
                height: 50vh;
            }

            #map {
                height: 50vh !important;
            }
        }
    </style>
}

@section Scripts {
    <!-- Leaflet JS -->
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
            integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo="
            crossorigin=""></script>

    <script>
        // Pass model data to JavaScript
        window.mapConfig = {
            defaultLat: @Model.DefaultLatitude,
            defaultLon: @Model.DefaultLongitude,
            defaultZoom: @Model.DefaultZoom,
            initialLat: @(Model.InitialLatitude?.ToString() ?? "null"),
            initialLon: @(Model.InitialLongitude?.ToString() ?? "null")
        };
    </script>

    <!-- Map functionality -->
    <script src="~/js/map.js"></script>
}
